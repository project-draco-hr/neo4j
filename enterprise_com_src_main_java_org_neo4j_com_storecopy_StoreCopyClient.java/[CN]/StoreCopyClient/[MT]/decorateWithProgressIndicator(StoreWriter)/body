{
  return new StoreWriter(){
    private int totalFiles;
    @Override public long write(    String path,    ReadableByteChannel data,    ByteBuffer temporaryBuffer,    boolean hasData,    int recordSize) throws IOException {
      log.info("Copying %s",path);
      long written=actual.write(path,data,temporaryBuffer,hasData,recordSize);
      log.info("Copied %s %s",path,bytes(written));
      totalFiles++;
      return written;
    }
    @Override public void close(){
      actual.close();
      log.info("Done, copied %s files",totalFiles);
    }
  }
;
}
