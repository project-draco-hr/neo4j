{
  return new StoreWriter(){
    private int totalFiles;
    @Override public long write(    String path,    ReadableByteChannel data,    ByteBuffer temporaryBuffer,    boolean hasData) throws IOException {
      console.log("Copying " + path);
      long written=actual.write(path,data,temporaryBuffer,hasData);
      console.log("Copied  " + path + " "+ bytes(written));
      totalFiles++;
      return written;
    }
    @Override public void close(){
      actual.close();
      console.log("Done, copied " + totalFiles + " files");
    }
  }
;
}
