{
  String typeName=type.getCanonicalName();
switch (typeName) {
case "java.lang.Byte":
    return "(byte)" + value.byteValue() + " at offset "+ offset+ " (instead of "+ insteadOf+ ")";
case "java.lang.Short":
  return "(short)" + value.shortValue() + " at offset "+ offset+ " (instead of "+ insteadOf+ ")";
case "java.lang.Integer":
return "(int)" + value.intValue() + " at offset "+ offset+ " (instead of "+ insteadOf+ ")";
case "java.lang.Long":
return "(long)" + value + " at offset "+ offset+ " (instead of "+ insteadOf+ ")";
}
return "(" + typeName + ")"+ value+ " at offset "+ offset+ " (instead of "+ insteadOf+ ")";
}
