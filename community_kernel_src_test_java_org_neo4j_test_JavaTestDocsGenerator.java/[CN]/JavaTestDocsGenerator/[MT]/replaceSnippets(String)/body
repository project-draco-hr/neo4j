{
  String result=description;
  if (description.contains(SNIPPET_MARKER)) {
    Pattern p=Pattern.compile(".*" + SNIPPET_MARKER + "([a-zA-Z_0-9]*).*");
    Matcher m=p.matcher(description);
    m.find();
    String group=m.group(1);
    if (!snippets.containsKey(group)) {
      throw new Error("No snippet '" + group + "' found.");
    }
    result=description.replace(SNIPPET_MARKER + group,snippets.get(group));
    result=replaceSnippets(result);
  }
  return result;
}
