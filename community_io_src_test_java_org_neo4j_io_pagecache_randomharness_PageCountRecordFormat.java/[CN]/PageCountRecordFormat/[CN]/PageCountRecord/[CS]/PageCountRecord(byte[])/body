{
  if (bytes.length == 0) {
    throw new IllegalArgumentException("Bytes cannot be empty");
  }
  byte first=bytes[0];
  for (  byte b : bytes) {
    if (b != first) {
      throw new IllegalArgumentException("All bytes must be the same: " + Arrays.toString(bytes));
    }
  }
  this.bytes=bytes;
}
