{
  String entity=json.format(new MappingRepresentation("uri"){
    @Override protected void serialize(    MappingSerializer serializer){
      try {
        serializer.putAbsoluteUri("URL",new URI("http://localhost/"));
      }
 catch (      URISyntaxException e) {
        throw new RuntimeException(e);
      }
    }
  }
);
  assertEquals(JsonHelper.createJsonFrom(Collections.singletonMap("URL","http://localhost/")),entity);
}
