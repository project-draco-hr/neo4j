{
  client.connect(address).send(TransportTestUtil.acceptedVersions(1,0,0,0)).send(TransportTestUtil.chunk(InitMessage.init("TestClient/1.1",map("principal","neo4j","credentials","neo4j","scheme","basic"))));
  assertThat(client,eventuallyReceives(new byte[]{0,0,0,1}));
  assertThat(client,eventuallyReceives(msgSuccess(Collections.singletonMap("credentials_expired",true))));
  client.send(TransportTestUtil.chunk(RunMessage.run("CALL dbms.security.changePassword",Collections.singletonMap("password","")),PullAllMessage.pullAll()));
  assertThat(client,eventuallyReceives(msgFailure(Status.Security.InvalidArguments,"A password cannot be empty.")));
}
