{
  return new Statement(){
    @Override public void evaluate() throws Throwable {
      try {
        base.evaluate();
        life.shutdown();
      }
 catch (      Throwable failure) {
        try {
          life.shutdown();
        }
 catch (        Throwable suppressed) {
          failure.addSuppressed(suppressed);
        }
        throw failure;
      }
 finally {
        life=new LifeSupport();
      }
    }
  }
;
}
