{
  super(fileName,conf,idType,idGeneratorFactory,pageCache,logProvider,typeDescriptor,recordFormat,new IntStoreHeaderFormat(dataSizeFromConfiguration + recordFormat.getRecordHeaderSize()){
    @Override public void writeHeader(    PageCursor cursor){
      if (defaultValue < 1 || defaultValue > 0xFFFF) {
        throw new IllegalArgumentException("Illegal block size[" + defaultValue + "], limit is 65535");
      }
      super.writeHeader(cursor);
    }
  }
);
}
