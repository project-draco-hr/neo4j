{
  ClientResponse response=doc.builder("Create a node").payload("{\"foo\" : \"bar\"}").status(Response.Status.CREATED).header("Location").post(functionalTestHelper.nodeUri());
  assertNotNull(response.getHeaders().get("Content-Length"));
  assertTrue(response.getLocation().toString().matches(NODE_URI_PATTERN));
  assertProperNodeRepresentation(JsonHelper.jsonToMap(doc.data.entity));
}
