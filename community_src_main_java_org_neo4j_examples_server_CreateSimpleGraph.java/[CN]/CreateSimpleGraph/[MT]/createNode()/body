{
  final String nodeEntryPointUri=SERVER_ROOT_URI + "node";
  WebResource resource=Client.create().resource(nodeEntryPointUri);
  ClientResponse response=resource.accept(MediaType.APPLICATION_JSON).type(MediaType.APPLICATION_JSON).entity(EMPTY_JSON_CONTAINER).post(ClientResponse.class);
  System.out.println(String.format("POST to [%s], status code [%d], location header [%s]",nodeEntryPointUri,response.getStatus(),response.getLocation().toString()));
  return response.getLocation();
}
