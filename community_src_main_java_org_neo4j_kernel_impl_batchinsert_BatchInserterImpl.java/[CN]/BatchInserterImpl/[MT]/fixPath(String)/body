{
  File directories=new File(dir);
  if (!directories.exists()) {
    if (!directories.mkdirs()) {
      throw new UnderlyingStorageException("Unable to create directory path[" + storeDir + "] for Neo store.");
    }
  }
  dir=FileUtils.fixSeparatorsInPath(dir);
  String fileSeparator=System.getProperty("file.separator");
  String store=dir + fileSeparator + "neostore";
  if (!new File(store).exists()) {
    NeoStore.createStore(store);
  }
  return store;
}
