{
  ensureOpen();
  readWriteLock.lock();
  try {
    List<IndexPartition> partitions=getPartitions();
    if (partitions.size() == 1) {
      return new SimpleLuceneLabelScanWriter(partitions.get(0),format,heldLock);
    }
    throw new UnsupportedOperationException();
  }
  finally {
    readWriteLock.unlock();
  }
}
