{
  if (!availabilityGuard.isAvailable(accessTimeout))   throw new TransactionFailureException("Database is currently not available " + availabilityGuard.hashCode());
  if (transactionRunning()) {
    return new PlaceboTransaction(txManager,lockManager,txManager.getTransactionState());
  }
  Transaction result=null;
  try {
    txManager.begin(forceMode);
    result=new TopLevelTransaction(txManager,lockManager,txManager.getTransactionState());
  }
 catch (  Exception e) {
    throw new TransactionFailureException("Unable to begin transaction",e);
  }
  return result;
}
