{
  create();
  boolean failed=false;
  try {
    registerRecovery();
    life.start();
  }
 catch (  final Throwable throwable) {
    failed=true;
    throw new RuntimeException("Error starting " + getClass().getName() + ", "+ storeDir.getAbsolutePath(),throwable);
  }
 finally {
    if (failed) {
      shutdown();
    }
  }
}
