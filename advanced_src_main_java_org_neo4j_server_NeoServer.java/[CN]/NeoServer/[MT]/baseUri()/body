{
  StringBuilder sb=new StringBuilder();
  sb.append("http");
  if (webServerPort == 443) {
    sb.append("s");
  }
  sb.append("://");
  sb.append(InetAddress.getLocalHost().getCanonicalHostName());
  if (webServerPort != 80) {
    sb.append(":");
    sb.append(webServerPort);
  }
  sb.append("/");
  return sb.toString();
}
