{
  boolean batchSizeReached=this.queue.queue(new TransactionToApply(transaction.getTransactionRepresentation(),transaction.getCommitEntry().getTxId()){
    @Override public void commitment(    Commitment commitment,    long transactionId){
      super.commitment(commitment,transactionId);
      txHandler.accept(transactionId);
    }
  }
);
  if (batchSizeReached) {
    applyQueuedTransactionsIfNeeded();
  }
  return false;
}
