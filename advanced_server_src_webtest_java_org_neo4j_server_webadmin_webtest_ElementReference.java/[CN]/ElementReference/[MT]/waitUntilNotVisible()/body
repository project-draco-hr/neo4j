{
  long end=System.currentTimeMillis() + MAX_WAIT_TIME;
  try {
    while (System.currentTimeMillis() < end) {
      if (this.getElement().getValueOfCssProperty("display").equals("none")) {
        return;
      }
      try {
        Thread.sleep(13);
      }
 catch (      Exception e) {
        throw new RuntimeException(e);
      }
    }
  }
 catch (  StaleElementReferenceException e) {
    return;
  }
catch (  NoSuchElementException e) {
    return;
  }
  throw new RuntimeException("Element did disappear within a reasonable time. " + "\nHTML dump:\n" + webDriver.getPageSource());
}
