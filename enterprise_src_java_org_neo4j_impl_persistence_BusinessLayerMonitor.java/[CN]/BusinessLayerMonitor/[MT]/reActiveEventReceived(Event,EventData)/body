{
  if (data == null || !(data.getData() instanceof PersistenceSource)) {
    String msg="The data for " + event + " is "+ data+ ", which does not implement PersistenceSource.";
    throw new IllegalArgumentException(msg);
  }
  if (event == Event.DATA_SOURCE_REMOVED) {
    PersistenceSourceDispatcher.getDispatcher().persistenceSourceRemoved((PersistenceSource)data.getData());
  }
 else {
    log.severe("Received event " + event + ", of which I know nothing.");
  }
}
