{
  createIndex(db,label,propertyKey);
  try {
    createUniquenessConstraint(label,propertyKey);
    fail("Expected exception to be thrown");
  }
 catch (  ConstraintViolationException e) {
    assertEquals("There already exists an index for label 'MY_LABEL' on property 'my_property_key'. " + "A constraint cannot be created until the index has been dropped.",e.getMessage());
  }
}
