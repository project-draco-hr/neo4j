{
  try (Transaction transaction=db.beginTx()){
    db.createNode(label).setProperty(propertyKey,"value1");
    db.createNode(label).setProperty(propertyKey,"value1");
    transaction.success();
  }
   try {
    createUniquenessConstraint(label,propertyKey);
    fail("Expected exception to be thrown");
  }
 catch (  ConstraintViolationException e) {
    assertEquals(format("Unable to create CONSTRAINT ON ( my_label:MY_LABEL ) ASSERT my_label.my_property_key " + "IS UNIQUE:%nMultiple nodes with label `MY_LABEL` have property `my_property_key` = " + "'value1':%n"+ "  node(0)%n"+ "  node(1)"),e.getMessage());
  }
}
