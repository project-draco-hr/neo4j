{
  String storeDir=args[0];
  boolean setGraphProperty=args.length > 1 ? Boolean.parseBoolean(args[1]) : false;
  GraphDatabaseService db=new EmbeddedGraphDatabase(storeDir,stringMap(),new DefaultGraphDatabaseDependencies(DevNullLoggingService.DEV_NULL));
  Transaction tx=db.beginTx();
  Node node=db.createNode();
  node.setProperty("name","Something");
  if (setGraphProperty) {
    ((GraphDatabaseAPI)db).getNodeManager().getGraphProperties().setProperty("prop","Some value");
  }
  tx.success();
  tx.finish();
  System.exit(0);
}
