{
  long nodeId=helper.createNode();
  String key="key";
  String value="value";
  String indexName="botherable-index";
  helper.createNodeIndex(indexName);
  ClientResponse response=Client.create().resource(functionalTestHelper.indexUri() + "/node/" + indexName+ "/"+ key+ "/"+ value).type(MediaType.APPLICATION_JSON).entity(functionalTestHelper.nodeUri(nodeId)).post(ClientResponse.class);
  assertEquals(400,response.getStatus());
}
