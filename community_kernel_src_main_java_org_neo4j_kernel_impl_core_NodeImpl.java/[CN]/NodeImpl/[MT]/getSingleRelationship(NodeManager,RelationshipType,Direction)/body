{
  Iterator<Relationship> rels=getAllRelationshipsOfType(nodeManager,wrap(dir),new RelationshipType[]{type}).iterator();
  if (!rels.hasNext()) {
    return null;
  }
  Relationship rel=rels.next();
  if (rels.hasNext()) {
    throw new NotFoundException("More than one relationship[" + type + ", "+ dir+ "] found for "+ this);
  }
  return rel;
}
