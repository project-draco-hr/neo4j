{
  try {
    LockableWindow candidate=window;
    if (candidate != null && candidate.markAsInUse()) {
      return candidate;
    }
    lock();
    candidate=window;
    if (candidate != null && candidate.markAsInUse()) {
      unLock();
    }
    return candidate;
  }
  finally {
    setHit();
  }
}
