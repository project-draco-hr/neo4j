{
  registerShutdownHookForNeo();
  startNeo();
  createExampleNodeSpace();
  boolean trueForLocal=waitForUserInput("Would you like to start a " + "local shell instance or enable neo to accept remote " + "connections [l/r]? ").equalsIgnoreCase("l");
  if (trueForLocal) {
    startLocalShell();
  }
 else {
    startRemoteShellAndWait();
  }
  System.out.println("Shutting down...");
  shutdown();
}
