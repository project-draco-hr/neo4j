{
  theStartNode=createLinkedList(SHORT_LIST_LENGTH,server.getDatabase());
  int negativeLeaseTime=-9;
  ClientResponse response=Client.create().resource(functionalTestHelper.nodeUri(theStartNode.getId()) + "/paged/traverse/node?leaseTime=" + String.valueOf(negativeLeaseTime)).accept(MediaType.APPLICATION_JSON_TYPE).entity(traverserDescription()).post(ClientResponse.class);
  assertEquals(400,response.getStatus());
}
