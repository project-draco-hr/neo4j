{
  if (files.length == 0) {
    throw new IllegalArgumentException("No files specified");
  }
  return new DataFactory<ENTITY>(){
    @Override public Data<ENTITY> create(    final Configuration config){
      return new Data<ENTITY>(){
        @Override public CharSeeker stream(){
          try {
            return charSeeker(files(charset,files),config,true);
          }
 catch (          IOException e) {
            throw new InputException(e.getMessage(),e);
          }
        }
        @Override public Function<ENTITY,ENTITY> decorator(){
          return decorator;
        }
      }
;
    }
  }
;
}
