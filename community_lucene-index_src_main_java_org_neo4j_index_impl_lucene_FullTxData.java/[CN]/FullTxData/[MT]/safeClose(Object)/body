{
  if (object == null) {
    return;
  }
  try {
    if (object instanceof IndexWriter) {
      ((IndexWriter)object).close();
    }
 else     if (object instanceof IndexSearcher) {
      ((IndexSearcher)object).close();
    }
 else     if (object instanceof IndexReader) {
      ((IndexReader)object).close();
    }
  }
 catch (  IOException e) {
  }
}
