{
  if (getCause() instanceof UpgradeNotAllowedByDatabaseModeException) {
    log.error("Neo4j cannot be started, because the database files require upgrading and upgrading is not " + "supported in this database mode. Please start the database in stand-alone mode to allow a " + "safe upgrade of the database files.");
  }
 else   if (getCause() instanceof UpgradeNotAllowedByConfigurationException) {
    log.error("Neo4j cannot be started, because the database files require upgrading and upgrades are " + "disabled in configuration. Please set '%s' to 'true' in your configuration file and try again.",allow_store_upgrade.name());
  }
 else {
    super.describeTo(log);
  }
}
