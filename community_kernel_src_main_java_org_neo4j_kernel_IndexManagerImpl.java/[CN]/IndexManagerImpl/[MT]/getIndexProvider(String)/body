{
  if (provider == null) {
    throw new IllegalArgumentException("No 'provider' given in configuration map");
  }
synchronized (this.indexProviders) {
    IndexImplementation result=this.indexProviders.get(provider);
    if (result != null) {
      return result;
    }
    throw new IllegalArgumentException("No index provider '" + provider + "' found. Maybe the intended provider (or one more of its dependencies) "+ "aren't on the classpath or it failed to load.");
  }
}
