{
  Pair<Map<String,String>,Boolean> config=getOrCreateIndexConfig(Relationship.class,indexName,customConfiguration);
  try {
    return getIndexProvider(config.first().get(PROVIDER)).relationshipIndex(indexName,config.first());
  }
 catch (  RuntimeException e) {
    if (config.other()) {
      indexStore.remove(Relationship.class,indexName);
    }
    throw e;
  }
}
