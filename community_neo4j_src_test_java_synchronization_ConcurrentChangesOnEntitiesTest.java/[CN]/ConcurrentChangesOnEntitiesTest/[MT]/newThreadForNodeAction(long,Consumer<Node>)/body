{
  return new Thread(){
    @Override public void run(){
      try (Transaction tx=db.beginTx()){
        Node node=db.getNodeById(nodeId);
        barrier.await();
        nodeConsumer.accept(node);
        tx.success();
      }
 catch (      Exception e) {
        ex.set(e);
      }
    }
  }
;
}
