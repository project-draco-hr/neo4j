{
  ClientRequest request;
  try {
    if (payload != null) {
      request=REQUEST_BUILDER.type(payloadType).accept(accept).entity(payload).build(new URI(uri),method);
    }
 else {
      request=REQUEST_BUILDER.accept(accept).build(new URI(uri),method);
    }
  }
 catch (  URISyntaxException e) {
    throw new RuntimeException(e);
  }
  return retrieveResponse(title,description,uri,responseCode,accept,headerFields,request);
}
