{
  int offset=offsetForId(id);
  try {
    if (cursor.next(pageId)) {
      readRecordWithRetry(cursor,id,record,mode,offset);
    }
 else {
      record.setId(id);
      record.clear();
      mode.verify(record);
    }
    return record;
  }
 catch (  IOException e) {
    throw new UnderlyingStorageException(e);
  }
}
