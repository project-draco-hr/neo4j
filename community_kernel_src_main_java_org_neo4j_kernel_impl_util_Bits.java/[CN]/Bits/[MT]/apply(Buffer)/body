{
  int rest=numberOfBytes % 8;
  if (rest > 0) {
    int steps=(rest - 1) * 8;
    long mask=0xFFL << steps;
    long source=longs[0];
    for (int i=0; i < rest; i++) {
      byte value=(byte)((source & mask) >>> steps);
      buffer.put(value);
      mask>>>=8;
      steps-=8;
    }
  }
 else {
    buffer.putLong(longs[0]);
  }
  for (int i=1; i < longs.length; i++) {
    buffer.putLong(longs[i]);
  }
}
