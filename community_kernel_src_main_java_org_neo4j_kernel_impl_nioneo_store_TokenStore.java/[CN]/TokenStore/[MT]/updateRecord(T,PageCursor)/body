{
  int id=record.getId();
  registerIdFromUpdateRecord(id);
  cursor.setOffset(id * getRecordSize() % pageSize);
  if (record.inUse()) {
    cursor.putByte(Record.IN_USE.byteValue());
    writeRecord(record,cursor);
  }
 else {
    cursor.putByte(Record.NOT_IN_USE.byteValue());
    if (!isInRecoveryMode()) {
      freeId(id);
    }
  }
}
