{
  PersistenceWindow window;
  try {
    window=acquireWindow(id,OperationType.READ);
  }
 catch (  InvalidRecordException e) {
    return newRecord((int)id);
  }
  try {
    T record=getRecord((int)id,window,true);
    record.setIsLight(true);
    return record;
  }
  finally {
    releaseWindow(window);
  }
}
