{
  lock.writeLock().lock();
  try {
    assertStillOpenForBusiness();
    try {
      actionDuringFlip.call();
      this.delegate=flipTarget.create();
    }
 catch (    Exception e) {
      this.delegate=failureDelegate;
      throw new FlipFailedKernelException(e);
    }
  }
  finally {
    lock.writeLock().unlock();
  }
}
