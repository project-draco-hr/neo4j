{
  long advicedMax=available / 2;
  long total=0;
  node=Math.max(GCResistantCache.MIN_SIZE,node);
  total+=node;
  rel=Math.max(GCResistantCache.MIN_SIZE,rel);
  total+=rel;
  if (total > available)   throw new IllegalArgumentException(String.format("Configured cache memory limits (node=%s, relationship=%s, total=%s) exceeds available heap space (%s)",node,rel,total,available));
  if (total > advicedMax)   logger.logMessage(String.format("Configured cache memory limits(node=%s, relationship=%s, total=%s) exceeds recommended limit (%s)",node,rel,total,advicedMax));
}
