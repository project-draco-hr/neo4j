{
  CheckPointScheduler scheduler=new CheckPointScheduler(checkPointer,jobScheduler,10l);
  scheduler.start();
  jobScheduler.runJob();
  verify(checkPointer).checkPointIfNeeded(any(TriggerInfo.class));
  scheduler.stop();
  scheduler.start();
  jobScheduler.runJob();
  verifyNoMoreInteractions(checkPointer);
}
