{
  return new Logger(){
    @Override public void log(    String message){
      matcher=builder.error(messageMatcher(message));
    }
    @Override public void log(    String message,    Throwable throwable){
      matcher=builder.error(messageMatcher(message),sameInstance(throwable));
    }
    @Override public void log(    String format,    Object... arguments){
      matcher=builder.error(messageMatcher(format),arguments);
    }
    @Override public void bulk(    Consumer<Logger> consumer){
      throw new UnsupportedOperationException();
    }
  }
;
}
