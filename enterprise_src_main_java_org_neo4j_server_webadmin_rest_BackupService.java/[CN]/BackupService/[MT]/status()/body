{
  try {
    BackupStatusRepresentation.CurrentAction currentAction=BackupStatusRepresentation.CurrentAction.IDLE;
    Date actionStarted=null;
    Date actionEta=null;
    BackupStatusRepresentation backupInfo=new BackupStatusRepresentation(currentAction,actionStarted,actionEta);
    String entity=JsonRenderers.DEFAULT.render(backupInfo);
    return addHeaders(Response.ok(entity,JsonRenderers.DEFAULT.getMediaType())).build();
  }
 catch (  Exception e) {
    return buildExceptionResponse(Status.INTERNAL_SERVER_ERROR,"An unexpected internal server error occurred.",e,JsonRenderers.DEFAULT);
  }
}
