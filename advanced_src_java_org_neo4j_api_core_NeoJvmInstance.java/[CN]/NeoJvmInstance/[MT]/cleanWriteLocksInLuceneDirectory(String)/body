{
  File dir=new File(luceneDir);
  if (!dir.isDirectory()) {
    return;
  }
  for (  File file : dir.listFiles()) {
    if (file.isDirectory()) {
      cleanWriteLocksInLuceneDirectory(file.getAbsolutePath());
    }
 else     if (file.getName().equals("write.lock")) {
      file.delete();
    }
  }
}
