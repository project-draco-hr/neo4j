{
  Config config=dependencies.getConfig();
  boolean ephemeral=config.get(GraphDatabaseFacadeFactory.Configuration.ephemeral);
  FileSystemAbstraction fileSystem=context.fileSystem();
  DirectoryFactory directoryFactory=directoryFactory(ephemeral,fileSystem);
  return new LuceneSchemaIndexProvider(fileSystem,directoryFactory,context.storeDir(),config,context.databaseInfo().operationalMode);
}
