{
  try {
    return (RmiRemoteTarget)Naming.lookup(uri.toString());
  }
 catch (  MalformedURLException e) {
    throw new RuntimeException("Could not connect to the RMI site at \"" + uri + "\"",e);
  }
catch (  RemoteException e) {
    throw new RuntimeException("Could not connect to the RMI site at \"" + uri + "\"",e);
  }
catch (  NotBoundException e) {
    throw new RuntimeException("Could not connect to the RMI site at \"" + uri + "\"",e);
  }
}
