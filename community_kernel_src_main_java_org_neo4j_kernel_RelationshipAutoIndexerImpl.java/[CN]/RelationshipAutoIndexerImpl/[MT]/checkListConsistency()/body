{
  if (!nodePropertyKeysToInclude.isEmpty() && !nodePropertyKeysToIgnore.isEmpty()) {
    throw new IllegalArgumentException("Cannot set both add and ignore lists for node auto indexing");
  }
  if (!relPropertyKeysToInclude.isEmpty() && !relPropertyKeysToIgnore.isEmpty()) {
    throw new IllegalArgumentException("Cannot set both add and ignore lists for relationship auto indexing");
  }
}
