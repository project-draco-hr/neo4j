{
  return new BatchIterable<RelationshipSpecification>(){
    @Override IterableSpecification<RelationshipSpecification> init(){
      return receive(connection.getAllRelationships(txId,nodeId,dir));
    }
    @Override IterableSpecification<RelationshipSpecification> more(    int requestToken){
      return receive(connection.getMoreRelationships(txId,requestToken));
    }
    @Override void done(    int requestToken){
      receive(connection.closeRelationshipIterator(txId,requestToken));
    }
  }
;
}
