{
  StringBuilder builder=new StringBuilder(statusCode.getDefaultMessage());
  if (message != null) {
    builder.append(" Details: ");
    builder.append(message);
    return builder.toString();
  }
  if (cause != null) {
    builder.append(" Cause: ");
    builder.append(cause.getMessage());
    return builder.toString();
  }
  return builder.toString();
}
