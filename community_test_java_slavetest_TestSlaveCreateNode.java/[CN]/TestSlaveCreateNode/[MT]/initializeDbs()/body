{
  try {
    FileUtils.deleteDirectory(SLAVE_PATH);
    FileUtils.deleteDirectory(MASTER_PATH);
    GraphDatabaseService masterDb=new EmbeddedGraphDatabase(MASTER_PATH.getAbsolutePath());
    masterDb.shutdown();
    FileUtils.copyDirectory(MASTER_PATH,SLAVE_PATH);
    master=new FakeMaster(MASTER_PATH.getAbsolutePath());
    broker=new FakeBroker(master);
    haDb=new HighlyAvailableGraphDatabase(SLAVE_PATH.getAbsolutePath(),new HashMap<String,String>(),broker);
    broker.setSlave(haDb);
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
}
