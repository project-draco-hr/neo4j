def iif(condition, iftrue, iffalse=None):
    "\n    Immediate if c.f. ternary ?: operator.\n    False value defaults to '' if the true value is a string.\n    False value defaults to 0 if the true value is a number.\n    "
    if (iffalse is None):
        if isinstance(iftrue, basestring):
            iffalse = ''
        if (type(iftrue) in (int, float)):
            iffalse = 0
    if condition:
        return iftrue
    else:
        return iffalse
