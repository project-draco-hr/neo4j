{
  return new Switch<T>(){
    private boolean firstTime=true;
    @SuppressWarnings("unchecked") @Override public synchronized boolean accept(    T item){
      boolean accepted=firstTime;
      firstTime=false;
      for (      Switch<T> filter : filters) {
        if (filter.accept(item)) {
          accepted=true;
        }
      }
      if (accepted) {
        reset();
      }
      return accepted;
    }
    @SuppressWarnings("unchecked") @Override public synchronized void reset(){
      for (      Switch<T> filter : filters) {
        filter.reset();
      }
    }
  }
;
}
