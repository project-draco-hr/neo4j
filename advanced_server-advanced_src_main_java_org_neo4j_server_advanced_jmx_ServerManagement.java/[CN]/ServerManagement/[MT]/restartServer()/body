{
  Thread thread=new Thread("restart thread"){
    @Override public void run(){
      server.stop();
      server.start();
    }
  }
;
  thread.setDaemon(false);
  thread.start();
  System.out.println("restarting server");
  try {
    thread.join();
  }
 catch (  InterruptedException e) {
    throw new RuntimeException(e);
  }
}
