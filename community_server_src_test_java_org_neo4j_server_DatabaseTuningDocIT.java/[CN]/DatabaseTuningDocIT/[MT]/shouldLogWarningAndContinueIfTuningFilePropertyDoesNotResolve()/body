{
  Logging logging=bufferingLogging();
  NeoServer server=ServerBuilder.server(logging).usingDatabaseDir(folder.getRoot().getAbsolutePath()).withNonResolvableTuningFile().build();
  server.start();
  String logDump=logging.toString();
  assertThat(logDump,containsString(String.format("The specified file for database performance tuning properties [")));
  assertThat(logDump,containsString(String.format("] does not exist.")));
  server.stop();
}
