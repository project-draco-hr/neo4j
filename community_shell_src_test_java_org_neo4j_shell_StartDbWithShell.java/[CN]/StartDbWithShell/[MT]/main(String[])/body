{
  String path=args.length > 0 ? args[0] : "target/test-data/shell-db";
  GraphDatabaseService db=new GraphDatabaseFactory().newEmbeddedDatabaseBuilder(path).setConfig(ShellSettings.remote_shell_enabled,GraphDatabaseSetting.TRUE).setConfig(GraphDatabaseSettings.allow_store_upgrade,GraphDatabaseSetting.TRUE).newGraphDatabase();
  System.out.println("db " + path + " started, ENTER to quit");
  System.in.read();
  db.shutdown();
}
