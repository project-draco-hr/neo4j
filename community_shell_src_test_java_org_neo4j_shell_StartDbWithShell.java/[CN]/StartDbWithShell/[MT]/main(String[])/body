{
  File path=args.length > 0 ? new File(args[0]) : new File("target/test-data/shell-db");
  GraphDatabaseService db=new GraphDatabaseFactory().newEmbeddedDatabaseBuilder(path).setConfig(ShellSettings.remote_shell_enabled,Settings.TRUE).setConfig(GraphDatabaseSettings.allow_store_upgrade,Settings.TRUE).newGraphDatabase();
  System.out.println("db " + path + " started, ENTER to quit");
  System.in.read();
  db.shutdown();
}
