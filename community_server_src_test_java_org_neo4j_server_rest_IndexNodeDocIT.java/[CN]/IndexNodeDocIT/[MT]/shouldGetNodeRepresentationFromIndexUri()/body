{
  long nodeId=helper.createNode();
  String key="key2";
  String value="value";
  String indexName=indexes.newInstance();
  helper.createNodeIndex(indexName);
  JaxRsResponse response=RestRequest.req().post(functionalTestHelper.indexNodeUri(indexName),createJsonStringFor(nodeId,key,value));
  assertEquals(Status.CREATED.getStatusCode(),response.getStatus());
  String indexUri=response.getHeaders().getFirst("Location");
  response=RestRequest.req().get(indexUri);
  assertEquals(200,response.getStatus());
  String entity=response.getEntity();
  Map<String,Object> map=JsonHelper.jsonToMap(entity);
  assertNotNull(map.get("self"));
}
