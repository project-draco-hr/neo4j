{
  if (size <= Byte.MAX_VALUE) {
    ensure(2);
    buffer.put(BYTES_8);
    buffer.put((byte)size);
  }
 else   if (size <= Short.MAX_VALUE) {
    ensure(3);
    buffer.put(BYTES_16);
    buffer.putShort((short)size);
  }
 else {
    ensure(5);
    buffer.put(BYTES_32);
    buffer.putInt(size);
  }
}
