{
  if (size < 0x10) {
    out.ensure(1).put((byte)(TINY_TEXT | size));
  }
 else   if (size <= Byte.MAX_VALUE) {
    out.ensure(2).put(TEXT_8).put((byte)size);
  }
 else   if (size <= Short.MAX_VALUE) {
    out.ensure(3).put(TEXT_16).putShort((short)size);
  }
 else {
    out.ensure(5).put(TEXT_32).putInt(size);
  }
}
