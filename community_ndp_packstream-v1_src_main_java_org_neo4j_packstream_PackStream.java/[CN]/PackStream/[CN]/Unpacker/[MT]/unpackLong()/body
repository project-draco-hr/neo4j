{
  ensure(1);
  final byte markerByte=buffer.get();
  if (markerByte >= MINUS_2_TO_THE_4) {
    return markerByte;
  }
switch (markerByte) {
case INT_8:
    ensure(1);
  return buffer.get();
case INT_16:
ensure(2);
return buffer.getShort();
case INT_32:
ensure(4);
return buffer.getInt();
case INT_64:
ensure(8);
return buffer.getLong();
default :
throw new Unexpected("Expected an integer, but got: " + toHexString(markerByte));
}
}
