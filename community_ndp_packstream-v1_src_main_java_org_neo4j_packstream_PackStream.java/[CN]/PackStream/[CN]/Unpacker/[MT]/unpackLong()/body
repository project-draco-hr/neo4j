{
  final byte markerByte=in.readByte();
  if (markerByte >= MINUS_2_TO_THE_4) {
    return markerByte;
  }
switch (markerByte) {
case INT_8:
    return in.readByte();
case INT_16:
  return in.readShort();
case INT_32:
return in.readInt();
case INT_64:
return in.readLong();
default :
throw new Unexpected("Expected an integer, but got: " + toHexString(markerByte));
}
}
