{
  GraphDatabaseService db=dbRule.getGraphDatabaseService();
  try (Transaction tx=db.beginTx()){
    db.createNode();
    tx.failure();
  }
   db=dbRule.restartDatabase();
  Node node;
  try (Transaction tx=db.beginTx()){
    node=db.createNode();
    tx.success();
  }
   assertThat(node.getId(),equalTo(0L));
}
