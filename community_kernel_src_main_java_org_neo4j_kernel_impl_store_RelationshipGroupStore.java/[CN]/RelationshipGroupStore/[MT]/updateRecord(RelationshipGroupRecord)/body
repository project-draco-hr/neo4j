{
  try (PageCursor cursor=storeFile.io(pageIdForRecord(record.getId()),PF_SHARED_WRITE_LOCK)){
    if (cursor.next()) {
      do {
        updateRecord(record,cursor,false);
      }
 while (cursor.shouldRetry());
    }
  }
 catch (  IOException e) {
    throw new UnderlyingStorageException(e);
  }
}
