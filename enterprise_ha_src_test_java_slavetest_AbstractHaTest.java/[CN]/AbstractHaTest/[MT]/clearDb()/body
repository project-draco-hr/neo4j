{
  final List<File> toDelete=new LinkedList<File>();
  for (int i=0; i <= maxNum; i++) {
    toDelete.add(dbPath(i));
  }
  new Thread(new Runnable(){
    @Override public void run(){
      for (      File deleteMe : toDelete) {
        try {
          FileUtils.deleteRecursively(deleteMe);
        }
 catch (        IOException e) {
          e.printStackTrace();
        }
      }
    }
  }
).start();
}
