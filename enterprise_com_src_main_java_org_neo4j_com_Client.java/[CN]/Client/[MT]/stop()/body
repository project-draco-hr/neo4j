{
  if (channelPool != null) {
    channelPool.close(true);
    bootstrap.releaseExternalResources();
    comExceptionHandler=ComExceptionHandler.NO_OP;
    msgLog.logMessage(toString() + " shutdown",true);
    bootstrap=null;
    channelPool=null;
    resourcePoolReleaser=null;
    requestMonitor=null;
  }
}
