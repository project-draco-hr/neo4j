{
  Node node1=getGraphDb().createNode();
  Node node2=getGraphDb().createNode();
  int expectedCount=0;
  for (int i=0; i < 150; i++) {
    node1.createRelationshipTo(node2,TEST);
    expectedCount++;
  }
  newTransaction();
  clearCache();
  for (int i=0; i < 50; i++) {
    node1.createRelationshipTo(node2,TEST);
    expectedCount++;
  }
  assertEquals(expectedCount,count(node1.getRelationships()));
  newTransaction();
  assertEquals(expectedCount,count(node1.getRelationships()));
}
