{
  if (value == null) {
    return 0;
  }
  if (value instanceof String) {
    return SizeOfs.sizeOf((String)value);
  }
 else   if (value.getClass().isArray()) {
    return SizeOfs.sizeOfArray(value);
  }
 else {
    throw new IllegalStateException("Unkown type: " + value.getClass() + " ["+ value+ "]");
  }
}
