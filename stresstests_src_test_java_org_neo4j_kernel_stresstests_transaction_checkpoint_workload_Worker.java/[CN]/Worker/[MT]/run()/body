{
  do {
    try (Transaction tx=db.beginTx()){
      for (int i=0; i < numOpsPerTx; i++) {
        randomMutation.perform();
      }
      tx.success();
      monitor.transactionCompleted();
    }
 catch (    DeadlockDetectedException ignore) {
    }
catch (    Exception e) {
      e.printStackTrace();
    }
  }
 while (!monitor.stop());
  monitor.done();
}
