{
  if (transactionRunning()) {
    if (placeboTransaction == null) {
      placeboTransaction=new PlaceboTransaction(txManager);
    }
    return placeboTransaction;
  }
  Transaction result=null;
  try {
    txManager.begin(forceMode);
    result=new TopLevelTransaction(txManager,lockManager,lockReleaser);
  }
 catch (  Exception e) {
    throw new TransactionFailureException("Unable to begin transaction",e);
  }
  return result;
}
