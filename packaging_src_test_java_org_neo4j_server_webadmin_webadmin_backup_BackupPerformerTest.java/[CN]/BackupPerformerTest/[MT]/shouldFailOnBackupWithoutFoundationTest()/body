{
  String backupPath="target/backup";
  TestUtil.deleteFileOrDirectory(new File(backupPath));
  Exception e=null;
  try {
    BackupPerformer.doBackup(new File(backupPath));
  }
 catch (  NoBackupFoundationException noBakEx) {
    e=noBakEx;
  }
  assertTrue("Backing up without backup foundation should throw an exception.",e != null);
  assertTrue("Backing up without backup foundation should throw NoBackupFoundationException.",e instanceof NoBackupFoundationException);
}
