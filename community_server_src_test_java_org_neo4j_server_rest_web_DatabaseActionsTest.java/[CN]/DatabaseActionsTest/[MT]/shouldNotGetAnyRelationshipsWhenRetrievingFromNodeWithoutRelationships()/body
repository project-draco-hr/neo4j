{
  long nodeId=graphdbHelper.createNode();
  Transaction transaction=graph.beginTx();
  try {
    verifyRelReps(0,actions.getNodeRelationships(nodeId,RelationshipDirection.all,Collections.<String>emptyList()));
    verifyRelReps(0,actions.getNodeRelationships(nodeId,RelationshipDirection.in,Collections.<String>emptyList()));
    verifyRelReps(0,actions.getNodeRelationships(nodeId,RelationshipDirection.out,Collections.<String>emptyList()));
  }
  finally {
    transaction.finish();
  }
}
