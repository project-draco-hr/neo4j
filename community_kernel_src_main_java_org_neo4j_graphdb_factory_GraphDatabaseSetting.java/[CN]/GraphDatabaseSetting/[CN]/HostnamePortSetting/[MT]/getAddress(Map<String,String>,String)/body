{
  String value=config.get(name());
  String[] parts=value.split(":");
  if (parts[0].length() > 0) {
    return parts[0];
  }
 else {
    if (defaultValue != null && defaultValue.contains(":")) {
      throw new IllegalArgumentException("Default address '" + defaultValue + "' most likely contains a port, it shouldn't");
    }
    return defaultValue;
  }
}
