{
  SchemaRule rule;
  try {
    rule=getSchemaRule(id,newRecordBuffer());
    if (rule.getKind() != kind) {
      throw new SchemaRuleNotFoundException("Schema rule " + id + " found, although expected it to be of kind "+ kind+ ", but was "+ rule.getKind());
    }
    return rule;
  }
 catch (  InvalidRecordException e) {
    throw new SchemaRuleNotFoundException("Schema rule " + id + " not found",e);
  }
}
