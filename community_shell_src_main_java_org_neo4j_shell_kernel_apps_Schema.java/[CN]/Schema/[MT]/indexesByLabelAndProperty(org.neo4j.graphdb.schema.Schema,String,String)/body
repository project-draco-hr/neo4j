{
  Iterable<IndexDefinition> indexes=label != null ? schema.getIndexes(label(label)) : schema.getIndexes();
  if (property != null) {
    indexes=filter(new Predicate<IndexDefinition>(){
      @Override public boolean accept(      IndexDefinition index){
        return indexOf(property,index.getPropertyKeys()) != -1;
      }
    }
,indexes);
  }
  return indexes;
}
