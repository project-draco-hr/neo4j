{
  final int NON_DEFAULT_PORT=4321;
  server=server().onPort(NON_DEFAULT_PORT).usingDatabaseDir(folder.cleanDirectory(name.getMethodName()).getAbsolutePath()).build();
  server.start();
  assertEquals(NON_DEFAULT_PORT,server.getWebServerPort());
  JaxRsResponse response=new RestRequest(server.baseUri()).get();
  assertThat(response.getStatus(),is(200));
  response.close();
}
