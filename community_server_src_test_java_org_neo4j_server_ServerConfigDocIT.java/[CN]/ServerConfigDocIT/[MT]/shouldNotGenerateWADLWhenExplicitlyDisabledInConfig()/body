{
  server=server().withProperty(Configurator.WADL_ENABLED,"false").usingDatabaseDir(folder.directory(name.getMethodName()).getAbsolutePath()).build();
  server.start();
  JaxRsResponse response=new RestRequest().get("http://localhost:7474/application.wadl",MediaType.WILDCARD_TYPE);
  assertEquals(404,response.getStatus());
}
