{
  Index<Node> index=database.getNodeIndex(indexName);
  Transaction tx=database.graph.beginTx();
  try {
    Collection<Long> result=new ArrayList<Long>();
    for (    Node node : index.get(key,value)) {
      result.add(node.getId());
    }
    tx.success();
    return result;
  }
  finally {
    tx.finish();
  }
}
