{
  PersistenceWindow window=acquireWindow(id,OperationType.READ);
  try {
    PropertyRecord record=getRecord(id,window.getBuffer());
    Collection<DynamicRecord> keyRecords=keyPropertyStore.getRecords(record.getKeyBlock());
    for (    DynamicRecord keyRecord : keyRecords) {
      record.addKeyRecord(keyRecord);
    }
    if (record.getType() == PropertyType.STRING) {
      Collection<DynamicRecord> stringRecords=stringPropertyStore.getRecords((int)record.getPropBlock());
      for (      DynamicRecord stringRecord : stringRecords) {
        record.addValueRecord(stringRecord);
      }
    }
    return record;
  }
  finally {
    releaseWindow(window);
  }
}
