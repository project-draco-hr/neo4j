{
  Pattern pattern=Pattern.compile("" + ":" + or(simpleIdentifier("simpleLabel"),complexIdentifier("complexLabel")) + "\\("+ or(simpleIdentifier("simpleProperty"),complexIdentifier("complexProperty"))+ "\\)");
  Matcher matcher=pattern.matcher(specification);
  if (!matcher.find()) {
    throw new IllegalArgumentException("Cannot parse index specification " + specification);
  }
  return Pair.of(either(matcher.group("simpleLabel"),matcher.group("complexLabel")),either(matcher.group("simpleProperty"),matcher.group("complexProperty")));
}
