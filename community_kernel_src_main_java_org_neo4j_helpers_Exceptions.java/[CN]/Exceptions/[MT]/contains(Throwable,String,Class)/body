{
  final Predicate<Throwable> anyOfClasses=isAnyOfClasses(anyOfTheseClasses);
  return contains(cause,new Predicate<Throwable>(){
    @Override public boolean accept(    Throwable item){
      return item.getMessage() != null && item.getMessage().contains(containsMessage) && anyOfClasses.accept(item);
    }
  }
);
}
