{
  NodeImpl node=nodeCache.get(nodeId);
  if (node != null) {
    return node;
  }
  ReentrantLock loadLock=lockId(nodeId);
  try {
    node=nodeCache.get(nodeId);
    if (node != null) {
      return node;
    }
    if (!persistenceManager.loadLightNode(nodeId)) {
      return null;
    }
    node=new NodeImpl(nodeId);
    nodeCache.put(nodeId,node);
    return node;
  }
  finally {
    loadLock.unlock();
  }
}
