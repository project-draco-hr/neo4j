{
  final Value<Long> nodeId=new Value<Long>();
  inTransaction(new Runnable(){
    public void run(){
      Node node=graphDb().createNode();
      assertNotNull(node);
      nodeId.set(node.getId());
    }
  }
);
  inTransaction(new Runnable(){
    public void run(){
      assertNotNull(graphDb().getNodeById(nodeId.get()));
    }
  }
);
}
