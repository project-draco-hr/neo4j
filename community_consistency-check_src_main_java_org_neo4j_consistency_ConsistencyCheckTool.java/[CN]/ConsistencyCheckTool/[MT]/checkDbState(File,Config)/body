{
  try (PageCache pageCache=StandalonePageCacheFactory.createPageCache(fs,tuningConfiguration)){
    if (new RecoveryRequiredChecker(fs,pageCache).isRecoveryRequiredAt(storeDir)) {
      systemError.print(Strings.joinAsLines("Active logical log detected, this might be a source of inconsistencies.","Please recover database before running the consistency check.","To perform recovery please start database and perform clean shutdown."));
      exit();
    }
  }
 catch (  IOException e) {
    systemError.printf("Failure when checking for recovery state: '%s', continuing as normal.%n",e);
  }
}
