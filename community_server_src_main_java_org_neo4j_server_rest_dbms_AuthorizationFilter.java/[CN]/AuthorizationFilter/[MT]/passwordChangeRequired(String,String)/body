{
  return new ErrorResponse(403){
    @Override Object body(){
      URI path=UriBuilder.fromUri(baseURL).path(format("/user/%s/password",username)).build();
      return map("errors",asList(map("code",Status.Security.AuthorizationFailed.code().serialize(),"message","User is required to change their password.")),"password_change",path.toString());
    }
  }
;
}
