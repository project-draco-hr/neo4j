{
  final StringBuilder sb=new StringBuilder("{");
  final Iterator<String> keys=pc.getPropertyKeys().iterator();
  while (keys.hasNext()) {
    String prop=keys.next();
    sb.append(prop).append(":");
    final Object value=pc.getProperty(prop);
    sb.append(text(value));
    if (keys.hasNext()) {
      sb.append(",");
    }
  }
  sb.append("}");
  return sb.toString();
}
