{
  try {
    BackupPerformer.doBackup(getConfiguredBackupPath());
    return addHeaders(Response.ok()).build();
  }
 catch (  NoBackupFoundationException e) {
    return buildExceptionResponse(Response.Status.BAD_REQUEST,"Configured backup path needs backup foundation.",e,JsonRenderers.DEFAULT);
  }
catch (  Exception e) {
    e.printStackTrace();
    return buildExceptionResponse(Status.INTERNAL_SERVER_ERROR,"An unexpected internal server error occurred.",e,JsonRenderers.DEFAULT);
  }
}
