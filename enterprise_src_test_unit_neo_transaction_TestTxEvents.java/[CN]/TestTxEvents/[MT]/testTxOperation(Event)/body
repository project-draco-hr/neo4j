{
  EventConsumer eventHook=new EventConsumer(operation);
  UserTransactionImpl tx=(UserTransactionImpl)TransactionFactory.getUserTransaction();
  try {
    EventManager.getManager().registerReActiveEventListener(eventHook,operation);
    Integer eventIdentifier=performOperation(operation,tx);
    Thread.sleep(500);
    assertTrue(operation + " event not generated",eventHook.received());
    assertEquals("Event generated, but with wrong event identifier",eventHook.getEventIdentifier(),eventIdentifier);
  }
 catch (  Exception e) {
    fail("Exception raised during testing of TX_BEGIN event: " + e);
  }
 finally {
    try {
      EventManager.getManager().unregisterReActiveEventListener(eventHook,operation);
      tx.rollback();
    }
 catch (    Exception e) {
    }
  }
}
