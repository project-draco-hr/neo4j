{
  if (!field.isAnnotationPresent(Context.class)) {
    throw new ProcedureException(Status.Procedure.FailedRegistration,"Field `%s` on `%s` is not annotated as a @" + Context.class.getSimpleName() + " and is not static. "+ "If you want to store state along with your procedure, please use a static field.",field.getName(),cls.getSimpleName());
  }
  if (!Modifier.isPublic(field.getModifiers()) || Modifier.isFinal(field.getModifiers())) {
    throw new ProcedureException(Status.Procedure.FailedRegistration,"Field `%s` on `%s` must be non-final and public.",field.getName(),cls.getSimpleName());
  }
}
