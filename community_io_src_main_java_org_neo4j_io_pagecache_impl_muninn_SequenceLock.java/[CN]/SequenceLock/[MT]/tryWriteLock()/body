{
  long s, n;
  for (; ; ) {
    s=getState();
    boolean unwritablyLocked=(s & EXL_MASK) != 0;
    boolean writeCountOverflow=(s & CNT_MASK) == CNT_MASK;
    if (unwritablyLocked | writeCountOverflow) {
      return failWriteLock(s,writeCountOverflow);
    }
    n=s + CNT_UNIT;
    if (compareAndSetState(s,n)) {
      return true;
    }
  }
}
