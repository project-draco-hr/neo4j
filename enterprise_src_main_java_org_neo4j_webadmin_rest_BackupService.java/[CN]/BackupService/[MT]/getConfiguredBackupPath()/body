{
  try {
    String strPath=ServerConfiguration.getInstance().get("general.backup.path").getValue();
    if (strPath.length() > 0) {
      return new File(strPath);
    }
 else {
      throw new NoBackupPathException("The backup path property is empty.");
    }
  }
 catch (  NoSuchPropertyException e) {
    throw new NoBackupPathException("The backup path property is empty.");
  }
}
