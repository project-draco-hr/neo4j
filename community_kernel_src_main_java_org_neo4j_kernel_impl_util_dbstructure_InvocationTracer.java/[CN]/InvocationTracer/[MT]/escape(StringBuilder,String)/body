{
  int len=arg.length();
  for (int i=0; i < len; i++) {
    char ch=arg.charAt(i);
switch (ch) {
case '"':
      builder.append("\\\"");
    break;
case '\'':
  builder.append("\\\'");
break;
case '\\':
builder.append("\\\\");
break;
case '\n':
builder.append("\\n");
case '\t':
builder.append("\\t");
case '\r':
builder.append("\\r");
case '\b':
builder.append("\\b");
case '\f':
builder.append("\\f");
default :
builder.append(ch);
break;
}
}
}
