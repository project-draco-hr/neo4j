{
  if (rollbackCause == null) {
    rollbackCause=cause;
  }
 else {
    if (!(rollbackCause instanceof MultipleCauseException)) {
      rollbackCause=new MultipleCauseException("Multiple exceptions occurred, stack traces of all of them available below, " + "or via #getCauses().",rollbackCause);
    }
    ((MultipleCauseException)rollbackCause).addCause(cause);
  }
}
