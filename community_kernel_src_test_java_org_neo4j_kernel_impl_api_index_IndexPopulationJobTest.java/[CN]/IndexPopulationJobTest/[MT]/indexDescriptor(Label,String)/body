{
  IndexDescriptor descriptor;
  try (KernelTransaction tx=kernel.newTransaction(KernelTransaction.Type.implicit,AccessMode.READ);Statement statement=tx.acquireStatement()){
    descriptor=new IndexDescriptor(statement.readOperations().labelGetForName(label.name()),statement.readOperations().propertyKeyGetForName(propertyKey));
    tx.success();
  }
   return descriptor;
}
