def find_in_path(fname, path=None):
    '\n    Find file fname in paths. Return None if not found.\n    '
    if (path is None):
        path = os.environ.get('PATH', '')
    for dir in path.split(os.pathsep):
        fpath = os.path.join(dir, fname)
        if os.path.isfile(fpath):
            return fpath
    else:
        return None
