{
  NodeRecord record=cache.get(id);
  if (record != null) {
    if (!record.inUse()) {
      throw new IOException("Record[" + id + "] not in use");
    }
    return record;
  }
  PersistenceWindow window=acquireWindow(id,OperationType.READ);
  try {
    record=getRecord(id,window.getBuffer(),false);
    cache.put(id,record);
    return record;
  }
  finally {
    releaseWindow(window);
  }
}
