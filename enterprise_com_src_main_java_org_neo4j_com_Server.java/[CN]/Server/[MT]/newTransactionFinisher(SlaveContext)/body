{
  return new Runnable(){
    @Override public void run(){
      try {
        closeChannel(null,slave);
      }
 catch (      Throwable e) {
        sleepNicely(200);
        unfinishedTransactionExecutor.submit(newTransactionFinisher(slave));
      }
    }
    private void sleepNicely(    int millis){
      try {
        Thread.sleep(millis);
      }
 catch (      InterruptedException e) {
        Thread.interrupted();
      }
    }
  }
;
}
