{
  Transactor transactor=new Transactor(db.getDependencyResolver().resolveDependency(TransactionManager.class),db.getDependencyResolver().resolveDependency(PersistenceManager.class));
  transactor.execute(ConstraintIndexCreator.createConstraintIndex(labelId,propertyKey));
  restartDb();
{
    SchemaWriteOperations statement=schemaWriteOperationsInNewTransaction();
    assertEquals(emptySetOf(IndexDescriptor.class),asSet(statement.indexesGetForLabel(labelId)));
    commit();
  }
}
