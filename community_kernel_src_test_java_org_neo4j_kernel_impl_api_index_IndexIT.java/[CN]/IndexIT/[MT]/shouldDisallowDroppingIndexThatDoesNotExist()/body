{
  newTransaction();
  IndexDescriptor index=statement.addIndex(labelId,propertyKey);
  commit();
  newTransaction();
  statement.dropIndex(index);
  commit();
  try {
    newTransaction();
    statement.dropIndex(index);
    commit();
  }
 catch (  ConstraintViolationKernelException e) {
    assertEquals(String.format("There is no index for property %d for label %d.",propertyKey,labelId),e.getMessage());
  }
}
