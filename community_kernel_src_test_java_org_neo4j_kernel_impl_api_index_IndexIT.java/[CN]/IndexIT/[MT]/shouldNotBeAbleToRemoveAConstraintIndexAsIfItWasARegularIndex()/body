{
  newTransaction();
  IndexDescriptor index=statement.uniqueIndexCreate(labelId,propertyKey);
  commit();
  try {
    newTransaction();
    statement.indexDrop(index);
    commit();
    fail("expected exception");
  }
 catch (  SchemaKernelException e) {
    assertEquals("Unable to drop index on :label[5](property[8]): Index belongs to constraint: " + ":label[5](property[8])",e.getMessage());
  }
}
