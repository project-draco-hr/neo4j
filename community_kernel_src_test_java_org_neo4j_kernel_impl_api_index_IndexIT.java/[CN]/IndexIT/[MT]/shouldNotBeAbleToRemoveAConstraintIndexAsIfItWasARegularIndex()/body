{
  newTransaction();
  IndexDescriptor index=statement.addConstraintIndex(labelId,propertyKey);
  commit();
  try {
    newTransaction();
    statement.dropIndex(index);
    commit();
    fail("expected exception");
  }
 catch (  DataIntegrityKernelException e) {
    assertEquals(String.format("There is no index for property %d for label %d.",propertyKey,labelId),e.getMessage());
  }
}
