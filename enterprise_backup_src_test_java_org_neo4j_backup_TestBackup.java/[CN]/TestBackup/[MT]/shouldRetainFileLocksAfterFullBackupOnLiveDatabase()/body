{
  String sourcePath="target/var/serverdb-lock";
  FileUtils.deleteDirectory(new File(sourcePath));
  GraphDatabaseService db=new GraphDatabaseFactory().newEmbeddedDatabaseBuilder(sourcePath).setConfig(OnlineBackupSettings.online_backup_enabled,GraphDatabaseSetting.TRUE).newGraphDatabase();
  try {
    assertStoreIsLocked(sourcePath);
    OnlineBackup.from("localhost").full(backupPath.getPath());
    assertStoreIsLocked(sourcePath);
  }
  finally {
    db.shutdown();
  }
}
