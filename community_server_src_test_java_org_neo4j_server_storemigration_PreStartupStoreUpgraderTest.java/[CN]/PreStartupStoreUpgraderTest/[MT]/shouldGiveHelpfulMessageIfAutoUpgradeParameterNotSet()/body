{
  Properties systemProperties=buildProperties(false);
  prepareSampleLegacyDatabase(new File(STORE_DIRECTORY));
  ByteArrayOutputStream outputStream=new ByteArrayOutputStream();
  PreStartupStoreUpgrader upgrader=new PreStartupStoreUpgrader(systemProperties,new PrintStream(outputStream));
  int exit=upgrader.run();
  assertEquals(1,exit);
  String[] lines=new String(outputStream.toByteArray()).split("\n");
  assertEquals("To enable automatic upgrade, please set configuration parameter " + "\"allow_store_upgrade=true\"",lines[0]);
}
