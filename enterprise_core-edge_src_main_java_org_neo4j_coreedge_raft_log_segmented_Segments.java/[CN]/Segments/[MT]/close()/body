{
  RuntimeException error=null;
  for (  SegmentFile segment : segmentFiles) {
    try {
      segment.close();
    }
 catch (    RuntimeException ex) {
      if (error == null) {
        error=ex;
      }
 else {
        error.addSuppressed(ex);
      }
    }
  }
  if (error != null) {
    throw error;
  }
}
