{
  if (batchSizeExceedsSafeZone(first,last)) {
    kernelTransactions.blockNewTransactions();
    try {
      markUnsafeTransactionsForTermination(first,last);
      commit(first);
    }
  finally {
      kernelTransactions.unblockNewTransactions();
    }
  }
 else {
    markUnsafeTransactionsForTermination(first,last);
    commit(first);
  }
}
