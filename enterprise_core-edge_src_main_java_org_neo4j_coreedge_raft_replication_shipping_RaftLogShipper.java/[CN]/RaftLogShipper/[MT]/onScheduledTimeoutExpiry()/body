{
  try {
    if (timedOut()) {
      onTimeout();
    }
 else     if (timeoutAbsoluteMillis != 0) {
      long timeLeft=timeoutAbsoluteMillis - clock.currentTimeMillis();
      if (timeLeft > 0) {
        scheduleTimeout(timeLeft);
      }
 else {
        onTimeout();
      }
    }
  }
 catch (  IOException e) {
    log.error("Exception during timeout handling: " + follower,e);
  }
}
