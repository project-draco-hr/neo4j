{
  return new Statement(){
    @Override public void evaluate() throws Throwable {
      seed=specificSeed == null ? currentTimeMillis() : specificSeed;
      reset();
      try {
        base.evaluate();
      }
 catch (      Throwable t) {
        throw withMessage(t,t.getMessage() + ": random seed used:" + seed);
      }
    }
  }
;
}
