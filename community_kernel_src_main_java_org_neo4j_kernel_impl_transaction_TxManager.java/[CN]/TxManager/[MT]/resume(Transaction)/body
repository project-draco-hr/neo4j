{
  if (!tmOk) {
    throw logAndReturn("TM error tx resume",new SystemException("TM has encountered some problem, " + "please perform neccesary action (tx recovery/restart)"));
  }
  Thread thread=Thread.currentThread();
  if (txThreadMap.get(thread) != null) {
    throw new IllegalStateException("Transaction already associated");
  }
  if (tx != null) {
    TransactionImpl txImpl=(TransactionImpl)tx;
    if (txImpl.getStatus() != Status.STATUS_NO_TRANSACTION) {
      txImpl.markAsActive();
      txThreadMap.put(thread,txImpl);
    }
  }
}
