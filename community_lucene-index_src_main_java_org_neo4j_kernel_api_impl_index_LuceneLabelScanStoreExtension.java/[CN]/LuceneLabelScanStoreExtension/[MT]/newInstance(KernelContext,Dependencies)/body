{
  boolean ephemeral=dependencies.getConfig().get(GraphDatabaseFacadeFactory.Configuration.ephemeral);
  DirectoryFactory directoryFactory=directoryFactory(ephemeral,context.fileSystem());
  LuceneLabelScanStore scanStore=new LuceneLabelScanStore(new NodeRangeDocumentLabelScanStorageStrategy(),directoryFactory,LabelScanStoreProvider.getStoreDirectory(context.storeDir()),context.fileSystem(),standard(),fullStoreLabelUpdateStream(dependencies.indexStoreView()),monitor != null ? monitor : loggerMonitor(dependencies.getLogService().getInternalLogProvider()));
  return new LabelScanStoreProvider(scanStore,priority);
}
