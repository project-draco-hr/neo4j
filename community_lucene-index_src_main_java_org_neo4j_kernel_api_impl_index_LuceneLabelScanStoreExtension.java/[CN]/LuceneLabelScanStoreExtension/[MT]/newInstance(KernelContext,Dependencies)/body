{
  Config config=dependencies.getConfig();
  boolean ephemeral=config.get(GraphDatabaseFacadeFactory.Configuration.ephemeral);
  DirectoryFactory directoryFactory=directoryFactory(ephemeral,context.fileSystem());
  LuceneLabelScanStore scanStore=new LuceneLabelScanStore(new NodeRangeDocumentLabelScanStorageStrategy(),directoryFactory,new File(new File(new File(context.storeDir(),"schema"),"label"),"lucene"),context.fileSystem(),tracking(),fullStoreLabelUpdateStream(dependencies.getNeoStoreSupplier()),config,context.operationalMode(),monitor != null ? monitor : loggerMonitor(dependencies.getLogService().getInternalLogProvider()));
  return new LabelScanStoreProvider(scanStore,priority);
}
