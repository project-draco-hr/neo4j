{
  ClientRequest request;
  try {
    request=ClientRequest.create().type(payloadType).accept(accept).entity(payload).build(new URI(uri),method);
  }
 catch (  URISyntaxException e) {
    System.out.println("URI syntax exception: '" + uri + "'");
    throw new RuntimeException(e);
  }
  return retrieveResponse(title,description,uri,responseCode,accept,headerField,request);
}
