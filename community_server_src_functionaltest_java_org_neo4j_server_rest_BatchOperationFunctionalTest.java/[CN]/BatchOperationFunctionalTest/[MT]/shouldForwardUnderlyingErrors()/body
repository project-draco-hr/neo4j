{
  JaxRsResponse response=RestRequest.req().post(functionalTestHelper.dataUri() + "batch",new PrettyJSON().array().object().key("method").value("POST").key("to").value("/node").key("body").object().key("age").array().value(true).value("hello").endArray().endObject().endObject().endArray().toString());
  assertEquals(400,response.getStatus());
  Map<String,Object> res=JsonHelper.jsonToMap(response.getEntity());
  assertTrue(((String)res.get("message")).startsWith("Invalid JSON array in POST body"));
}
