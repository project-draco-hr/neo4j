{
  int id=record.getId();
  int offset=(int)(id - buffer.position()) * getRecordSize();
  buffer.setOffset(offset);
  if (record.inUse()) {
    buffer.put(Record.IN_USE.byteValue()).putInt(record.getNextRel()).putInt(record.getNextProp());
  }
 else {
    buffer.put(Record.NOT_IN_USE.byteValue());
    if (!isInRecoveryMode()) {
      freeId(id);
    }
  }
}
