{
  try {
    ResourceBroker broker=ResourceBroker.getBroker();
    return broker.acquireResourceConnection();
  }
 catch (  NotInTransactionException nite) {
    throw new PersistenceException(nite);
  }
catch (  ResourceAcquisitionFailedException rafe) {
    throw new PersistenceException("Unable to acquire resource " + "connection to persistence source",rafe);
  }
}
