{
  ByteArrayOutputStream outStream=new ByteArrayOutputStream();
  PrintStream out=new PrintStream(outStream);
  HexPrinter printer=new HexPrinter(out,3,12);
  for (byte value=0; value < 30; value++) {
    printer.append(value);
  }
  out.flush();
  assertEquals(format("000 00 01 02 03 04 05 06 07  08 09 0A 0B%n" + "001 0C 0D 0E 0F 10 11 12 13  14 15 16 17%n" + "002 18 19 1A 1B 1C 1D"),outStream.toString());
}
