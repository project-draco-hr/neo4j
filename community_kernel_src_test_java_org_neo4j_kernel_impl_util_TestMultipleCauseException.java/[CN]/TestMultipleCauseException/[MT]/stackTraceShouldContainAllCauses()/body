{
  Throwable cause1=new Throwable("Message 1");
  MultipleCauseException exception=new MultipleCauseException("Hello",cause1);
  Throwable cause2=new Throwable("Message 2");
  exception.addCause(cause2);
  ByteArrayOutputStream baos=new ByteArrayOutputStream();
  PrintWriter out=new PrintWriter(baos);
  exception.printStackTrace(out);
  out.flush();
  String stackTrace=baos.toString();
  assertThat("Stack trace contains exception one as cause.",stackTrace.contains("Caused by: java.lang.Throwable: Message 1"),is(true));
  assertThat("Stack trace contains exception one as cause.",stackTrace.contains("Also caused by: java.lang.Throwable: Message 2"),is(true));
}
