{
  final CountDownLatch cb=new CountDownLatch(1);
  for (int i=0; i < tasksToSubmit; i++) {
    threadPool.execute(new Runnable(){
      @Override public void run(){
        try {
          cb.await();
        }
 catch (        InterruptedException e) {
          e.printStackTrace();
        }
      }
    }
);
  }
  return cb;
}
