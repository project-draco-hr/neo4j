{
  while (true) {
    List<PipeTask> done=new ArrayList<PipeTask>();
    for (    PipeTask task : tasks) {
      if (!task.pipe()) {
        done.add(task);
      }
    }
    if (!done.isEmpty())     tasks.removeAll(done);
    if (tasks.isEmpty()) {
synchronized (PipeThread.class) {
        if (tasks.isEmpty()) {
          piper=null;
          return;
        }
      }
    }
    try {
      Thread.sleep(10);
    }
 catch (    InterruptedException e) {
      Thread.interrupted();
    }
  }
}
