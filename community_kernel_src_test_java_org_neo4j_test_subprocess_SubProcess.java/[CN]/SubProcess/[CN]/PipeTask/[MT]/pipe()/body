{
  try {
    int available=source.available();
    if (available != 0) {
      byte[] data=new byte[available];
      source.read(data);
      ByteBuffer chars=ByteBuffer.wrap(data);
      while (chars.hasRemaining()) {
        char c=(char)chars.get();
        line.append(c);
        if (c == '\n') {
          print();
        }
      }
    }
  }
 catch (  IOException e) {
    if (line.length() > 0) {
      line.append('\n');
      print();
    }
    return false;
  }
  return true;
}
