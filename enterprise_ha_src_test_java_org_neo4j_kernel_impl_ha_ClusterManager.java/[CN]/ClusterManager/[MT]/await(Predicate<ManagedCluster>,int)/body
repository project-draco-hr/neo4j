{
  long end=System.currentTimeMillis() + TimeUnit.SECONDS.toMillis(maxSeconds);
  while (System.currentTimeMillis() < end) {
    if (predicate.accept(this)) {
      return;
    }
    try {
      Thread.sleep(100);
    }
 catch (    InterruptedException e) {
    }
  }
  String state=stateToString(this);
  throw new IllegalStateException(format("Awaited condition never met, waited %s secondes for %s:%n%s",maxSeconds,predicate,state));
}
