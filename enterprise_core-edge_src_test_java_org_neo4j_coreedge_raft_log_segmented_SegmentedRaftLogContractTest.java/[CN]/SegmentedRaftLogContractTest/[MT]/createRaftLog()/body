{
  if (fileSystem == null) {
    fileSystem=new EphemeralFileSystemAbstraction();
  }
  File directory=new File(SEGMENTED_LOG_DIRECTORY_NAME);
  fileSystem.mkdir(directory);
  SegmentedRaftLog newRaftLog=new SegmentedRaftLog(fileSystem,directory,1024,new DummyRaftableContentSerializer(),NullLogProvider.getInstance(),cacheSize,raft_log_pruning.getDefaultValue());
  life.add(newRaftLog);
  life.init();
  life.start();
  return newRaftLog;
}
