{
  if (size > (1024 * 1024 * 1024)) {
    float value=size / 1024.0f / 1024.0f/ 1024.0f;
    return value + "Gb";
  }
  if (size > (1024 * 1024)) {
    float value=size / 1024.0f / 1024.0f;
    return value + "Mb";
  }
  if (size > 1024) {
    float value=size / 1024.0f / 1024.0f;
    return value + "kb";
  }
  return size + "b";
}
