{
  if (size > (1024 * 1024 * 1024)) {
    float value=size / 1024.0f / 1024.0f/ 1024.0f;
    return value + "GiB";
  }
  if (size > (1024 * 1024)) {
    float value=size / 1024.0f / 1024.0f;
    return value + "MiB";
  }
  if (size > 1024) {
    float value=size / 1024.0f;
    return value + "kiB";
  }
  return size + "B";
}
