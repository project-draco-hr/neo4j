{
  try {
    URI result=new URI(mountPoint);
    if (result.isAbsolute()) {
      return result.getPath();
    }
 else {
      return result.toString();
    }
  }
 catch (  URISyntaxException e) {
    log.debug(format("Unable to translate [%s] to a relative URI in ensureRelativeUri(String mountPoint)",mountPoint));
    return mountPoint;
  }
}
