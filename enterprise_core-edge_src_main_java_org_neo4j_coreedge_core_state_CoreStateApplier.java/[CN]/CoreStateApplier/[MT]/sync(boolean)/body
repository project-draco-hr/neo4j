{
  if (applier != null) {
    if (cancelTasks) {
      status.cancelled=true;
      applier.shutdownNow();
    }
 else {
      applier.shutdown();
    }
    while (!applier.awaitTermination(1,MINUTES)) {
      log.warn("Applier is taking an unusually long time to sync");
    }
  }
  spawnExecutor();
}
