{
  HTTP.Response rs=http.POST("/session/");
  String sessionLocation=rs.location();
  byte[] payload=serialize(run("CREATE (n)",map("name","Bob")),discardAll());
  payload=Arrays.copyOf(payload,payload.length / 2);
  rs=http.POST(sessionLocation,createHttpPayload(payload));
  assertThat(rs.status(),equalTo(200));
  assertThat(messages(rs.rawContent()),equalsMessages(msgFailure(new Neo4jError(Status.Request.Invalid,"One or more malformed messages were received, please verify that your driver is of " + "the latest applicable version and if not, please file a bug report. The session will be " + "terminated."))));
  assertThat(http.POST(sessionLocation).status(),equalTo(404));
}
