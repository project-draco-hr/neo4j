{
  try {
    consoleReader.getClass().getMethod("setPrompt",String.class).invoke(consoleReader,prompt);
    Class<?> fileHistoryClass=Class.forName("jline.console.history.FileHistory");
    Object history=consoleReader.getClass().getMethod("getHistory").invoke(consoleReader);
    Class.forName("jline.console.history.FileHistory").getMethod("flush").invoke(history);
    return (String)consoleReader.getClass().getMethod("readLine").invoke(consoleReader);
  }
 catch (  RuntimeException e) {
    throw e;
  }
catch (  Exception e) {
    throw new RuntimeException(e);
  }
}
