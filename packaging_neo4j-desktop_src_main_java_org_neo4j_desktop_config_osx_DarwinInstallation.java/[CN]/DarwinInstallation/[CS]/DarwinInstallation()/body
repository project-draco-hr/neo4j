{
  String filename="openNeoTerminal.sh";
  try {
    String[] scriptCommands={"#!/bin/bash","export PATH=$PATH:" + this.getInstallationBinDirectory().getAbsolutePath().toString() + ":"+ this.getInstallationJreBinDirectory().getAbsolutePath().toString(),"echo Neo4j Command Prompt","echo.","echo This window is configured with Neo4j on the path.","echo.","echo Available commands:","echo * Neo4jShell","echo * Neo4jImport"};
    FileWriter fileWriter=new FileWriter(new File(filename),false);
    for (    String scriptCommand : scriptCommands) {
      fileWriter.write(scriptCommand + "\n");
    }
    fileWriter.flush();
    fileWriter.close();
    String commands[]={"bash","-c","ch","chmod a+x " + filename};
    Runtime.getRuntime().exec(commands);
  }
 catch (  IOException e) {
    System.out.println("Error writing openNeoTerminal.sh");
  }
catch (  URISyntaxException e) {
    System.out.println("Error getting bin locations for openNeoTerminal.sh");
  }
}
