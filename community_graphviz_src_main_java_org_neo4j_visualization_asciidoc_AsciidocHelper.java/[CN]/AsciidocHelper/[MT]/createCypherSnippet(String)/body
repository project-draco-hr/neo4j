{
  String result="[source,cypher]\n----\n" + query.replace("start ","START ").replace("where ","WHERE ").replace("match ","MATCH ").replace("skip ","SKIP ").replace("limit ","LIMIT ").replace("return ","RETURN ").replace(" MATCH ","\nMATCH ").replace(" RETURN ","\nRETURN ").replace(" SKIP ","\nSKIP ").replace(" LIMIT ","\nLIMIT ").replace(" WHERE ","\nWHERE ").replace("where ","WHERE ") + "\n----\n";
  String[] tokens=result.split("\n");
  String finalRes="";
  for (  String token : tokens) {
    if (token.length() > 123) {
      token=token.replaceAll(", ",",\n");
    }
    finalRes+=token + "\n";
  }
  return finalRes;
}
