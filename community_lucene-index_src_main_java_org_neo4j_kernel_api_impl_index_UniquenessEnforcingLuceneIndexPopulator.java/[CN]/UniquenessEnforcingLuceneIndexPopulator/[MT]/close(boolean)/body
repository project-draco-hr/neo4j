{
  try {
    if (populationCompletedSuccessfully) {
      new LuceneSchemaIndexProvider.WriterLogic().forceAndMarkAsOnline(writer);
    }
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
 finally {
    try {
      new LuceneSchemaIndexProvider.WriterLogic().close(writer);
      directory.close();
    }
 catch (    IOException e) {
      throw new RuntimeException(e);
    }
  }
}
