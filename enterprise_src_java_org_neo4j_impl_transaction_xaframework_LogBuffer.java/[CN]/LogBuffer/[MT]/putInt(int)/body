{
  if (mappedBuffer == null || (MAPPED_SIZE - mappedBuffer.position()) < 4) {
    getNewMappedBuffer();
    if (mappedBuffer == null) {
      fallbackBuffer.clear();
      fallbackBuffer.putInt(i);
      fallbackBuffer.flip();
      fileChannel.write(fallbackBuffer);
      return this;
    }
  }
  mappedBuffer.putInt(i);
  return this;
}
