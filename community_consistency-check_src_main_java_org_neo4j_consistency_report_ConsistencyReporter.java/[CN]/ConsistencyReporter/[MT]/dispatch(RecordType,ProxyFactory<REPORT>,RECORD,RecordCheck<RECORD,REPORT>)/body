{
  ReportInvocationHandler<RECORD,REPORT> handler=new ReportHandler<>(report,factory,type,records,record,monitor);
  try {
    checker.check(record,handler,records);
  }
 catch (  Exception e) {
    handler.report.error(type,record,"Failed to check record: " + e.getMessage(),new Object[0]);
  }
  handler.updateSummary();
}
