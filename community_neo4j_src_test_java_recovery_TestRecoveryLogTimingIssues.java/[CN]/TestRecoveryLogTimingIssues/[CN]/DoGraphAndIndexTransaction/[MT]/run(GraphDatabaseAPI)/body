{
  Transaction tx=graphdb.beginTx();
  try {
    Node parent=graphdb.createNode();
    graphdb.index().forNodes("index").add(parent,"name","test");
    for (int i=0; i < 10; i++) {
      Node child=graphdb.createNode();
      parent.createRelationshipTo(child,TYPE);
    }
    tx.success();
  }
  finally {
    tx.finish();
  }
}
