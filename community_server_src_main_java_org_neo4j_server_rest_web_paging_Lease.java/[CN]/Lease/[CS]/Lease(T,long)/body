{
  if (absoluteExpirationTimeInMilliseconds - System.currentTimeMillis() < 0) {
    throw new LeaseAlreadyExpiredException(String.format("Trying to create a lease [%d] milliseconds in the past is not permitted",absoluteExpirationTimeInMilliseconds - System.currentTimeMillis()));
  }
  this.leasedItem=leasedItem;
  this.expirationTime=absoluteExpirationTimeInMilliseconds;
  this.id=toHexOnly(UUID.randomUUID());
}
