{
  Config config=new Config();
  SchemaIndexProvider indexProvider=new LuceneSchemaIndexProvider(new DefaultFileSystemAbstraction(),DirectoryFactory.PERSISTENT,directory.graphDbDir(),new Config(),OperationalMode.single);
  IndexConfiguration indexConfig=new IndexConfiguration(false);
  IndexSamplingConfig samplingConfig=new IndexSamplingConfig(config);
  try (IndexAccessor accessor=indexProvider.getOnlineAccessor(indexId,indexConfig,samplingConfig);IndexReader reader=accessor.newReader()){
    return IteratorUtil.asList(reader.seek(value));
  }
