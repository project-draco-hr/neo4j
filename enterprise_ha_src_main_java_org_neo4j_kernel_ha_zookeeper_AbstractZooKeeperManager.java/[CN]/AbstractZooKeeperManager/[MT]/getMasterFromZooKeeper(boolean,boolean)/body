{
  ZooKeeperMachine master=getMasterBasedOn(getAllMachines(wait).values());
  Master masterClient=NO_MASTER;
  if (cachedMaster.other().getMachineId() != master.getMachineId()) {
    invalidateMaster();
    if (!allowChange)     return NO_MASTER_MACHINE_PAIR;
    if (master != Machine.NO_MACHINE && master.getMachineId() != getMyMachineId()) {
      masterClient=new MasterClient(master.getServer().first(),master.getServer().other(),graphDb,getConnectionLostHandler(),clientReadTimeout,clientLockReadTimeout,maxConcurrentChannelsPerSlave);
    }
    cachedMaster=Pair.<Master,Machine>of(masterClient,(Machine)master);
  }
  return cachedMaster;
}
