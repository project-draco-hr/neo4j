{
  return new Function2<File,Function<String,String>,File>(){
    @Override public File apply(    File path,    Function<String,String> settings){
      File parent=baseSetting.apply(settings);
      File realPath=path.isAbsolute() ? path : new File(parent,path.getPath());
      return realPath;
    }
    @Override public String toString(){
      return "relative to '" + baseSetting.name() + "'";
    }
  }
;
}
