{
  File configFile=model.getDatabaseConfigurationFile();
  return withTitledBorder("Database Tuning",withBoxLayout(BoxLayout.Y_AXIS,createPanel(withFlowLayout(FlowLayout.LEFT,createPanel(createLabel("neo4j.properties contains tuning configuration such as cache settings.","You will need to stop and re-start the database for changes to take effect."))),withFlowLayout(FlowLayout.RIGHT,createPanel(createUnmodifiableTextField(configFile.getAbsolutePath()),configurationButton)))));
}
