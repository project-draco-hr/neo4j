{
  return new IndexWriterFactory(){
    @Override public IndexWriter create(    File directory) throws IOException {
      IndexWriterConfig writerConfig=new IndexWriterConfig(Version.LUCENE_35,LuceneDataSource.KEYWORD_ANALYZER);
      writerConfig.setMaxBufferedDocs(100000);
      return new IndexWriter(directoryFactory.open(directory),writerConfig);
    }
  }
;
}
