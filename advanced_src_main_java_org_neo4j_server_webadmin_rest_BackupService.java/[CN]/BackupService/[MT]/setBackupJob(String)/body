{
  try {
    BackupJobDescription jobDesc=BackupJobDescriptionRepresentation.deserialize(jsonToMap(json));
    BackupManager.INSTANCE.getConfig().setJobDescription(jobDesc);
    BackupManager.INSTANCE.restart();
    return addHeaders(Response.ok()).build();
  }
 catch (  JsonParseRuntimeException e) {
    return buildExceptionResponse(Status.BAD_REQUEST,"The json data you provided is invalid.",e,JsonRenderers.DEFAULT);
  }
catch (  Exception e) {
    e.printStackTrace();
    return buildExceptionResponse(Status.INTERNAL_SERVER_ERROR,"An unexpected internal server error occurred.",e,JsonRenderers.DEFAULT);
  }
}
