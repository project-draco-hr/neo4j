{
  int centerX=getCenterX(node);
  int centerY=getCenterY(node);
  Set<Line> outgoing=linesFrom.get(node);
  if (outgoing != null) {
    for (    Line line : outgoing) {
      line.setX1(centerX);
      line.setY1(centerY);
    }
  }
  Set<Line> incoming=linesTo.get(node);
  if (incoming != null) {
    for (    Line line : incoming) {
      line.setX2(centerX);
      line.setY2(centerY);
    }
  }
}
