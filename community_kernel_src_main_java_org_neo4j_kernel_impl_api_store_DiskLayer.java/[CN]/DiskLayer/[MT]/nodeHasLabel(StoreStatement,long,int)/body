{
  try (NodeCursor nodeCursor=statement.acquireSingleNodeCursor(nodeId)){
    if (nodeCursor.next()) {
      try (LabelCursor labelCursor=nodeCursor.labels()){
        return labelCursor.seek(labelId);
      }
     }
 else {
      throw new EntityNotFoundException(EntityType.NODE,nodeId);
    }
  }
 }
