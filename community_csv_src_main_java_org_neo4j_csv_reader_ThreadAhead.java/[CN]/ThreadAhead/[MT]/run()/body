{
  while (!closed) {
    if (hasReadAhead || eof) {
      parkAWhile();
    }
 else {
      try {
        if (!readAhead()) {
          eof=true;
        }
        hasReadAhead=true;
        LockSupport.unpark(owner);
      }
 catch (      IOException e) {
        ioException=e;
        closed=true;
      }
catch (      Throwable e) {
        ioException=new IOException(e);
        closed=true;
      }
    }
  }
}
