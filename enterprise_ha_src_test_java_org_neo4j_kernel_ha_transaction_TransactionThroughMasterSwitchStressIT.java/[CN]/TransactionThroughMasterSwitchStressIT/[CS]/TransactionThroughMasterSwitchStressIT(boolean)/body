{
  clusterRule=new ClusterRule(getClass()).withSharedSetting(tx_termination_aware_locks,String.valueOf(txTerminationAwareLocks)).withInstanceSetting(HaSettings.slave_only,new IntFunction<String>(){
    @Override public String apply(    int value){
      if (value == 1 || value == 2) {
        return Settings.TRUE;
      }
 else {
        return Settings.FALSE;
      }
    }
  }
);
}
