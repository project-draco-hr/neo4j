{
  GraphDatabaseService db=new GraphDatabaseFactory().newEmbeddedDatabaseBuilder(directory.absolutePath()).setConfig(GraphDatabaseSettings.pagecache_memory,"8m").setConfig(GraphDatabaseSettings.auth_store,directory.file("auth").getAbsolutePath()).newGraphDatabase();
  try (Transaction tx=db.beginTx()){
    for (    IndexDefinition index : db.schema().getIndexes()) {
      index.drop();
    }
    tx.success();
  }
  finally {
    db.shutdown();
  }
}
