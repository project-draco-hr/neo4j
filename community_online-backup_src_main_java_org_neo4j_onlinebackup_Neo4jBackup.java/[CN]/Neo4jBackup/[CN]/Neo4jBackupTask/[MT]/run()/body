{
  if (srcVersion == -1 || dstVersion == -1) {
    final String message="Backup can not start: source and/or destination " + "could not be prepared for backup: [" + resourceName + "]";
    logger.severe(message);
    throw new IllegalStateException(message);
  }
  logger.fine("Backing up data source: [" + resourceName + "]");
  for (long i=dstVersion; i < srcVersion; i++) {
    logger.fine("Applying logical log [" + i + "] on ["+ resourceName+ "]");
    dst.applyLog(src.getLogicalLog(i));
  }
  logger.fine("Source and destination have been synchronized. " + "Backup of data source complete [" + dstVersion + "->"+ srcVersion+ "] on ["+ resourceName+ "].");
}
