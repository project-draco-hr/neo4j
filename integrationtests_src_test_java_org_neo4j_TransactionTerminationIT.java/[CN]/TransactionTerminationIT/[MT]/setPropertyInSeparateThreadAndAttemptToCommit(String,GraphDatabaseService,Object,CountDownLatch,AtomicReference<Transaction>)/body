{
  return executeInSeparateThread(threadName,new Runnable(){
    @Override public void run(){
      try (Transaction tx=db.beginTx()){
        txReference.set(tx);
        Node node=findNode(db);
        txStarted.countDown();
        node.setProperty(PROPERTY,value);
        tx.success();
      }
     }
  }
);
}
