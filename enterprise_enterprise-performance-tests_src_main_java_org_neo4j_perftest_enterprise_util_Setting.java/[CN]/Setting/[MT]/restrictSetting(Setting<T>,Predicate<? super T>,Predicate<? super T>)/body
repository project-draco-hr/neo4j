{
  final Collection<Predicate<? super T>> predicates=new ArrayList<Predicate<? super T>>(1 + (morePredicates == null ? 0 : morePredicates.length));
  predicates.add(firstPredicate);
  addAll(predicates,morePredicates);
  return new SettingAdapter<T,T>(setting){
    @Override T adapt(    T value){
      for (      Predicate<? super T> predicate : predicates) {
        if (!predicate.matches(value)) {
          throw new IllegalArgumentException(String.format("'%s' does not match %s",value,predicate));
        }
      }
      return value;
    }
  }
;
}
