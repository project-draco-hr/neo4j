{
  NamedFunction<S,Throwable> startTransaction=new NamedFunction<S,Throwable>("start-transaction-" + query.hashCode()){
    @Override public Throwable apply(    S subject){
      try {
        try (InternalTransaction tx=neo.beginLocalTransactionAsUser(subject,txType)){
          Result result=neo.getLocalGraph().execute(query);
          latch.startAndWaitForAllToStart();
          while (drain.get() && result.hasNext())           result.next();
          latch.finishAndWaitForAllToFinish();
          result.close();
          tx.success();
          return null;
        }
       }
 catch (      Throwable t) {
        return t;
      }
    }
  }
;
  done=threading.execute(startTransaction,subject);
  return query;
}
