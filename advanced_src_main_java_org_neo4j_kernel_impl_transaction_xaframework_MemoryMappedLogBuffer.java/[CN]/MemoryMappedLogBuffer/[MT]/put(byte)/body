{
  if (mappedBuffer == null || (MAPPED_SIZE - mappedBuffer.position()) < 1) {
    getNewMappedBuffer();
    if (mappedBuffer == null) {
      fallbackBuffer.clear();
      fallbackBuffer.put(b);
      fallbackBuffer.flip();
      fileChannel.write(fallbackBuffer,mappedStartPosition);
      mappedStartPosition+=1;
      return this;
    }
  }
  mappedBuffer.put(b);
  return this;
}
