{
  int leaderIndex=-1;
  StepStats leader=null;
  int index=0;
  for (  StepStats stat : execution.stats()) {
    if (leader == null || (stat.stat(downstream_idle_time).asLong() + stat.stat(upstream_idle_time).asLong()) < (leader.stat(downstream_idle_time).asLong() + leader.stat(upstream_idle_time).asLong())) {
      leader=stat;
      leaderIndex=index;
    }
    index++;
  }
  return leaderIndex;
}
