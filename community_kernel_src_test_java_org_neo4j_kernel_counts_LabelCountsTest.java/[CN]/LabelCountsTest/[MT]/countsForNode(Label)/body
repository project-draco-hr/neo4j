{
  ReadOperations read=statementProvider.instance().readOperations();
  int labelId;
  if (label == null) {
    labelId=ReadOperations.ANY_LABEL;
  }
 else {
    if (ReadOperations.NO_SUCH_LABEL == (labelId=read.labelGetForName(label.name()))) {
      return 0;
    }
  }
  return read.countsForNode(labelId);
}
