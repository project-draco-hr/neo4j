{
  Transaction tx=graphdb.beginTx();
  try {
    Node reference=removeReference ? null : graphdb.getReferenceNode();
    for (    Node node : graphdb.getAllNodes()) {
      for (      Relationship rel : node.getRelationships()) {
        rel.delete();
      }
      if (!node.equals(reference)) {
        node.delete();
      }
    }
    tx.success();
  }
  finally {
    tx.finish();
  }
}
