{
  commitTx();
  FirstTransaction firstTx=new FirstTransaction();
  SecondTransaction secondTx=new SecondTransaction();
  firstTx.start();
  secondTx.start();
  waitFor(firstTx,State.WAITING);
  waitFor(secondTx,State.WAITING);
  firstTx.countDown();
  firstTx.join();
  secondTx.countDown();
  secondTx.join();
  assertNotNull(secondTx.exception);
}
