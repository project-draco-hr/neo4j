{
  File failureFile=failureFile(indexId);
  RandomAccessFile rwFile=new RandomAccessFile(failureFile,"rw");
  try {
    FileChannel channel=rwFile.getChannel();
    channel.write(wrap(new byte[MAX_FAILURE_SIZE]));
    channel.force(true);
    channel.close();
  }
  finally {
    rwFile.close();
  }
}
