{
  getPageCache(fs,maxPages,pageCachePageSize,PageCacheTracer.NULL);
  File file=file("a");
  try (PagedFile pf=pageCache.map(file,filePageSize);PageCursor parent=pf.io(0,PF_SHARED_WRITE_LOCK)){
    PageCursor linked=parent.openLinkedCursor(1);
    assertTrue(parent.next());
    assertTrue(linked.next());
    writeRecords(parent);
    writeRecords(linked);
    PageCursor secondLinked=parent.openLinkedCursor(2);
    linked.putByte(0,(byte)1);
    assertTrue(linked.checkAndClearBoundsFlag());
  }
   try (PagedFile pf=pageCache.map(file,filePageSize);PageCursor parent=pf.io(0,PF_SHARED_READ_LOCK)){
    PageCursor linked=parent.openLinkedCursor(1);
    assertTrue(parent.next());
    assertTrue(linked.next());
    PageCursor secondLinked=parent.openLinkedCursor(2);
    linked.getByte(0);
    assertTrue(linked.checkAndClearBoundsFlag());
  }
 }
