{
  if (retries > 20) {
    close();
  }
  if (!acquireWriteBuffer()) {
    retries++;
    return false;
  }
  buffer.put(HeaderConstants.SLAVE_GREETING);
  buffer.putLong(slave.getIdentifier());
  buffer.putLong(slave.getCreationTime());
  buffer.putLong(slave.getVersion());
  buffer.flip();
  log("Setup greeting");
  setStatus(Status.SEND_GREETING);
  retries=0;
  return true;
}
