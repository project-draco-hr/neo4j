{
  try (StoreWriter storeWriter=writer){
    backupMonitor.startCopyingFiles();
    RequestContext copyStartContext=storeCopyServer.flushStoresAndStreamStoreFiles(storeWriter);
    ResponsePacker responsePacker=new StoreCopyResponsePacker(logicalTransactionStore,transactionIdStore,logFileInformation,db,copyStartContext.lastAppliedTransaction() + 1);
    long optionalTransactionId=boBackACoupleOfTransactionsIfRequired(copyStartContext.lastAppliedTransaction());
    return responsePacker.packResponse(anonymous(optionalTransactionId),null);
  }
 }
