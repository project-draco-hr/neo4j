{
  IndexStorage indexStorage=getIndexStorage(indexId);
  indexStorage.openDirectory();
  if (config.isUnique()) {
    return new UniqueLuceneIndexAccessor(documentStructure,IndexWriterFactories.standard(),indexStorage);
  }
 else {
    return new NonUniqueLuceneIndexAccessor(documentStructure,IndexWriterFactories.standard(),indexStorage,samplingConfig.bufferSize());
  }
}
