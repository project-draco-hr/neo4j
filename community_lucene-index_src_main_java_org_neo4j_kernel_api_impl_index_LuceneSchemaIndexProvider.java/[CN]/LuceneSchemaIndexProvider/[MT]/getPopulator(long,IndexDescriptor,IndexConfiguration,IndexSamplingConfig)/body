{
  if (readOnly) {
    throw new UnsupportedOperationException("Index population is not supported in read only mode.");
  }
  if (config.isUnique()) {
    return new DeferredConstraintVerificationUniqueLuceneIndexPopulator(documentStructure,IndexWriterFactories.tracking(),SearcherManagerFactories.standard(),directoryFactory,folderLayout.getFolder(indexId),failureStorage,indexId,descriptor);
  }
 else {
    return new NonUniqueLuceneIndexPopulator(NonUniqueLuceneIndexPopulator.DEFAULT_QUEUE_THRESHOLD,documentStructure,IndexWriterFactories.tracking(),directoryFactory,folderLayout.getFolder(indexId),failureStorage,indexId,samplingConfig);
  }
}
