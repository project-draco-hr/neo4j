{
  for (  String name : args) {
    File file=FileUtils.getFile(name);
    if (file.isFile()) {
      executeFile(file,file.getName());
    }
 else     if (file.isDirectory()) {
      for (      File fileInDir : FileUtils.listFiles(file,EXTENSIONS,true)) {
        String fileInDirName=fileInDir.getAbsolutePath().substring((int)file.getAbsolutePath().length() + 1).replace('/','-').replace('\\','-');
        executeFile(fileInDir,fileInDirName);
      }
    }
  }
}
