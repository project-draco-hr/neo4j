{
  StandardStore<NodeRecord,NodeRecordCursor> store=new StandardStore<>(new NodeStoreFormat_v2_2(),new File(storeDir,DEFAULT_NAME + NODE_STORE_NAME),new TestStoreIdGenerator(),pageCache,fsRule.get(),StringLogger.DEV_NULL);
  store.init();
  store.start();
  long nextRel=1337;
  NodeRecord record=new NodeRecord(store.allocate(),true,false,nextRel,2,42);
  store.write(record);
  NodeRecordCursor cursor=store.cursor(Store.SF_NO_FLAGS);
  cursor.position(record.getId());
  long firstRelId=cursor.firstRelationship();
  assertThat(firstRelId,equalTo(nextRel));
}
