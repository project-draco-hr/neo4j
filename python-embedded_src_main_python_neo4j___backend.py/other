import sys, neo4j, inspect
NEO4J_JAVA_CLASSES = (('org.neo4j.kernel.impl.core', ('NodeProxy', 'RelationshipProxy')), ('org.neo4j.kernel', ('Uniqueness', 'Traversal', 'EmbeddedGraphDatabase')), ('org.neo4j.kernel.impl.traversal', ('TraversalDescriptionImpl', 'TraverserImpl', 'TraversalPath')), ('org.neo4j.graphdb', ('Direction', 'DynamicRelationshipType', 'PropertyContainer', 'Transaction', 'GraphDatabaseService', 'Node', 'Relationship', 'Path', 'NotFoundException')), ('org.neo4j.graphdb.traversal', ('Evaluation', 'Evaluator')), ('org.neo4j.graphdb.index', ('Index', 'IndexHits')), ('org.neo4j.helpers.collection', ('IterableWrapper',)), ('java.util', ('HashMap',)))
