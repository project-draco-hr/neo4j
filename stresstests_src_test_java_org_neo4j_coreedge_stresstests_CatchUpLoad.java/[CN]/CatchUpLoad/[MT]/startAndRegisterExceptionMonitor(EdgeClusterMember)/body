{
  edgeClusterMember.start();
  final Monitors monitors=edgeClusterMember.database().getDependencyResolver().resolveDependency(Monitors.class);
  AtomicReference<Throwable> exception=new AtomicReference<>();
  monitors.addMonitorListener(new ExceptionMonitoringHandler.Monitor(){
    @Override public void exceptionCaught(    Channel channel,    Throwable cause){
      exception.set(cause);
    }
  }
,CatchUpClient.class.getName());
  return exception;
}
