{
  assertInTransaction();
  final StatementOperationParts context=ctxProvider.getCtxForReading();
  StatementState state=ctxProvider.statementForReading();
  try {
    Iterator<UniquenessConstraint> constraints=context.schemaReadOperations().constraintsGetForLabel(state,context.keyReadOperations().labelGetForName(state,label.name()));
    return asConstraintDefinitions(context,state,constraints);
  }
 catch (  LabelNotFoundKernelException e) {
    return emptyList();
  }
 finally {
    state.close();
  }
}
