{
  if (followerState.getMatchIndex() >= targetIndex) {
    if ((clock.currentTimeMillis() - startTime) <= electionTimeout) {
      return true;
    }
 else     if (roundCount < MAX_ROUNDS) {
      roundCount++;
      startTime=clock.currentTimeMillis();
      targetIndex=raftLog.appendIndex();
    }
  }
  return false;
}
