{
  PersistenceWindow window=null;
  try {
    window=acquireWindow((int)id,OperationType.READ);
  }
 catch (  InvalidRecordException e) {
    return false;
  }
  try {
    NodeRecord record=getRecord((int)id,window,true);
    if (record == null) {
      return false;
    }
    return true;
  }
  finally {
    releaseWindow(window);
  }
}
