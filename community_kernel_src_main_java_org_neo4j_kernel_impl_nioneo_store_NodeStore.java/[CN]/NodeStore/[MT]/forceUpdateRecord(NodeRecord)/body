{
  PageCursor cursor=pageCache.newCursor();
  try {
    storeFile.pin(cursor,PageLock.WRITE,pageIdForRecord(record.getId()));
  }
 catch (  IOException e) {
    throw new UnderlyingStorageException(e);
  }
  try {
    updateRecord(record,cursor,true);
  }
  finally {
    storeFile.unpin(cursor);
  }
}
