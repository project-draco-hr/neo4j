{
  byte inUse=record.inUse() ? Record.IN_USE.byteValue() : Record.NOT_IN_USE.byteValue();
  buffer.put(REL_COMMAND);
  buffer.putInt(record.getId()).put(inUse);
  record.setTransferStartPosition(buffer.getFileChannel(),buffer.getFileChannelPosition() + 5);
  if (record.inUse()) {
    buffer.putInt(record.getFirstNode()).putInt(record.getSecondNode()).putInt(record.getType()).putInt(record.getFirstPrevRel()).putInt(record.getFirstNextRel()).putInt(record.getSecondPrevRel()).putInt(record.getSecondNextRel()).putInt(record.getNextProp());
    record.setTransferCount(33);
  }
 else {
    record.setTransferCount(1);
  }
}
