{
  if (chunkSize <= data.readableBytes()) {
    input.addChunk(data.readSlice(chunkSize));
    isReadingSplitChunk=false;
  }
 else {
    if (data.readableBytes() > 0) {
      input.addChunk(data);
    }
    if (isReadingSplitChunk) {
      splitChunkRemaining-=chunkSize;
    }
 else {
      isReadingSplitChunk=true;
      splitChunkRemaining=chunkSize;
    }
  }
}
