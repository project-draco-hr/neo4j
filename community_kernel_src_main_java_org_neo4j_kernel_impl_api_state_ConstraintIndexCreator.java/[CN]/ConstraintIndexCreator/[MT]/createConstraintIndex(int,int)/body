{
  try (KernelTransaction transaction=kernelSupplier.get().newTransaction(KernelTransaction.Type.implicit);Statement statement=transaction.acquireStatement()){
    IndexDescriptor descriptor=new IndexDescriptor(labelId,propertyKeyId);
    ((KernelStatement)statement).txState().constraintIndexRuleDoAdd(descriptor);
    transaction.success();
    return descriptor;
  }
 catch (  TransactionFailureException e) {
    throw new RuntimeException(e);
  }
}
