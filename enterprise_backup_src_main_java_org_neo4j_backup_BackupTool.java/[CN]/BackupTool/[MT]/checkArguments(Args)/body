{
  if (arguments.get(FROM,null) == null) {
    throw new ToolFailureException("Please specify " + dash(FROM) + ", examples:\n"+ "  "+ dash(FROM)+ " 192.168.1.34\n"+ "  "+ dash(FROM)+ " 192.168.1.34:1234\n"+ "  "+ dash(FROM)+ " 192.168.1.15:2181,192.168.1.16:2181");
  }
  if (arguments.get(TO,null) == null) {
    throw new ToolFailureException("Specify target location with " + dash(TO) + " <target-directory>");
  }
}
