{
  ChannelBuffer readBuffer=readNext();
  more=readBuffer.readByte() == ChunkingChannelBuffer.CONTINUATION_MORE;
  if (!more && buffer == null) {
    buffer=readBuffer;
  }
 else {
    buffer=buffer == null ? ChannelBuffers.dynamicBuffer() : buffer;
    discardReadBytes();
    buffer.writeBytes(readBuffer);
  }
}
