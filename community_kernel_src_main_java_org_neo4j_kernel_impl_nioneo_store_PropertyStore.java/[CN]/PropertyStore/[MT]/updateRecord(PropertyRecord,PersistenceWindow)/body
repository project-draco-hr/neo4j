{
  long id=record.getId();
  Buffer buffer=window.getOffsettedBuffer(id);
  if (record.inUse()) {
    updateInUseRecord(record,buffer);
  }
 else {
    if (!isInRecoveryMode()) {
      freeId(id);
    }
    buffer.setOffset(buffer.getOffset() + 9);
    buffer.putLong(0);
  }
  updateDynamicRecords(record.getDeletedRecords());
}
