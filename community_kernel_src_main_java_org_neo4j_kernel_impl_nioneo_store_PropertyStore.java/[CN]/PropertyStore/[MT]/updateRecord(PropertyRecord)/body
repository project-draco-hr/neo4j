{
  PageCursor cursor=pageCache.newPageCursor();
  try {
    storeFile.pin(cursor,PageLock.EXCLUSIVE,pageIdForRecord(record.getId()));
  }
 catch (  IOException e) {
    throw new UnderlyingStorageException(e);
  }
  try {
    updateRecord(record,cursor);
  }
  finally {
    storeFile.unpin(cursor);
  }
}
