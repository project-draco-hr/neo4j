{
  tx=getCurrentTransaction(tx);
  TxLockElement tle=getOrCreateLockElement(tx);
  try {
    tle.movedOn=false;
    while (totalWriteCount > tle.writeCount || totalReadCount > tle.readCount) {
      deadlockGuardedWait(tx,tle,WRITE);
    }
    registerWriteLockAcquired(tx,tle);
  }
  finally {
    tle.movedOn=true;
    marked--;
  }
}
