{
  boolean shouldUnlink=false;
  try {
synchronized (this) {
      if (resource != null) {
        shouldUnlink=true;
        if (!explicit) {
          cleanupService.logLeakedReference(this);
        }
        try {
          resource.close();
        }
  finally {
          resource=null;
        }
      }
    }
  }
  finally {
    if (shouldUnlink) {
      cleanupService.unlink(this);
    }
  }
}
