{
  String message=e.getCause() instanceof ConnectException ? "Connection refused" : e.getMessage();
  System.err.println("ERROR (-v for expanded information):\n\t" + message);
  if (argMap.containsKey("v")) {
    e.printStackTrace(System.err);
  }
  System.err.println();
  printUsage();
  System.exit(1);
}
