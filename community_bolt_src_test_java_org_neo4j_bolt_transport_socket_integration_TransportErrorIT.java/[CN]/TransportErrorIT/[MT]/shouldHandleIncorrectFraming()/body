{
  byte[] truncated=serialize(run("UNWIND [1,2,3] AS a RETURN a, a * a AS a_squared"));
  truncated=Arrays.copyOf(truncated,truncated.length - 12);
  client.connect(address).send(acceptedVersions(1,0,0,0)).send(chunk(32,truncated));
  assertThat(client,eventuallyRecieves(new byte[]{0,0,0,1}));
  assertThat(client,eventuallyRecieves(msgFailure(Status.Request.InvalidFormat,"Unable to deserialize request, message boundary found before message ended. This indicates " + "a serialization or framing problem with your client driver.")));
}
