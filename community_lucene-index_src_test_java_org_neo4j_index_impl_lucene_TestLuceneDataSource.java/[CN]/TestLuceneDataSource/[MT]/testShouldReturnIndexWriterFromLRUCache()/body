{
  dataSource=new LuceneDataSource(new Config(new ConfigurationDefaults(GraphDatabaseSettings.class).apply(config())),indexStore,new DefaultFileSystemAbstraction(),new XaFactory(new Config(new ConfigurationDefaults(GraphDatabaseSettings.class).apply(config())),TxIdGenerator.DEFAULT,new PlaceboTm(),new DefaultLogBufferFactory(),new DefaultFileSystemAbstraction(),StringLogger.DEV_NULL,RecoveryVerifier.ALWAYS_VALID,LogPruneStrategies.NO_PRUNING));
  dataSource.start();
  IndexIdentifier identifier=identifier("foo");
  IndexWriter writer=dataSource.getIndexSearcher(identifier).getWriter();
  assertSame(writer,dataSource.getIndexSearcher(identifier).getWriter());
}
