{
switch (mode) {
case ONLINE:
case BATCHED:
    return new PopulatingIndexUpdater(){
      @Override public void process(      NodePropertyUpdate update) throws IOException, IndexEntryConflictException {
        job.update(update);
      }
    }
;
default :
  return new PopulatingIndexUpdater(){
    @Override public void process(    NodePropertyUpdate update) throws IOException, IndexEntryConflictException {
      throw new IllegalArgumentException("Unsupported update mode: " + mode);
    }
  }
;
}
}
