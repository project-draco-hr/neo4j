{
  kernelHealth.assertHealthy(XAException.class);
  try {
    long position=writeBuffer.getFileChannelPosition();
    LogEntry.Start start=xidIdentMap.get(identifier);
    start.setStartPosition(position);
    LogIoUtils.writeStart(writeBuffer,identifier,start.getXid(),start.getMasterId(),start.getLocalId(),start.getTimeWritten(),start.getLastCommittedTxWhenTransactionStarted());
  }
 catch (  IOException e) {
    throw Exceptions.withCause(new XAException("Logical log couldn't write transaction start entry: " + e),e);
  }
}
