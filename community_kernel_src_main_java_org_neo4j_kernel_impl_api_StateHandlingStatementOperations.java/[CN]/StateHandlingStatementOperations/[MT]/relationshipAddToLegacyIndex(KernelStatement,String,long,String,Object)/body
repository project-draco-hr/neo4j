{
  relationshipVisit(statement,relationship,new RelationshipVisitor<LegacyIndexNotFoundKernelException>(){
    @Override public void visit(    long relId,    long startNode,    long endNode,    int type) throws LegacyIndexNotFoundKernelException {
      statement.txState().getRelationshipLegacyIndexChanges(indexName).addRelationship(relationship,key,value,startNode,endNode);
    }
  }
);
}
