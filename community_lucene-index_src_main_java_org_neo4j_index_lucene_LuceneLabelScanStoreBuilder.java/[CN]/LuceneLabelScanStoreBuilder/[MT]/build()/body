{
  if (null == labelScanStore) {
    LuceneLabelScanIndex index=LuceneLabelScanIndexBuilder.create().withFileSystem(fileSystem).withIndexRootFolder(LabelScanStoreProvider.getStoreDirectory(storeDir)).build();
    labelScanStore=new LuceneLabelScanStore(index,fullStoreStream,logProvider,LuceneLabelScanStore.Monitor.EMPTY);
    try {
      labelScanStore.init();
      labelScanStore.start();
    }
 catch (    IOException e) {
      throw new RuntimeException(e);
    }
  }
  return labelScanStore;
}
