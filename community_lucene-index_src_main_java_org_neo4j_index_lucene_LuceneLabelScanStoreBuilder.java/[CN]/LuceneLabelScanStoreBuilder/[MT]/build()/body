{
  if (null == labelScanStore) {
    LuceneIndex index=LuceneIndexBuilder.create().withIndexRootFolder(LabelScanStoreProvider.getStoreDirectory(storeDir)).withFileSystem(fileSystem).withIndexIdentifier(LuceneLabelScanStore.INDEX_IDENTIFIER).build();
    labelScanStore=new LuceneLabelScanStore(new NodeRangeDocumentLabelScanStorageStrategy(),index,fullStoreStream,LuceneLabelScanStore.loggerMonitor(logProvider));
    try {
      labelScanStore.init();
      labelScanStore.start();
    }
 catch (    IOException e) {
      throw new RuntimeException(e);
    }
  }
  return labelScanStore;
}
