{
  if (null == labelScanStore) {
    labelScanStore=new LuceneLabelScanStore(new NodeRangeDocumentLabelScanStorageStrategy(),DirectoryFactory.PERSISTENT,new File(new File(new File(storeDir,"schema"),"label"),"lucene"),fileSystem,IndexWriterFactories.standard(),fullStoreLabelUpdateStream(neoStoreProvider),LuceneLabelScanStore.loggerMonitor(logger));
    try {
      labelScanStore.init();
      labelScanStore.start();
    }
 catch (    IOException e) {
      throw new RuntimeException(e);
    }
  }
  return labelScanStore;
}
