{
  StringLogger logger=logging.getLogger(transition.getOldState().getClass().getName());
  if (logger.isDebugEnabled()) {
    StringBuilder line=new StringBuilder(transition.getOldState().getClass().getSuperclass().getSimpleName() + ": " + transition);
    if (transition.getMessage().hasHeader(FROM))     line.append(" from:" + transition.getMessage().getHeader(FROM));
    logger.debug(line.toString());
  }
}
