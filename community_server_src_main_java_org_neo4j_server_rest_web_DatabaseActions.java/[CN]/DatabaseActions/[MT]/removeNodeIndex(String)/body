{
  if (!graphDb.index().existsForNodes(indexName)) {
    throw new NotFoundException("No node index named '" + indexName + "'.");
  }
  Index<Node> index=graphDb.index().forNodes(indexName);
  Transaction tx=beginTx();
  try {
    index.delete();
    tx.success();
  }
  finally {
    tx.finish();
  }
}
