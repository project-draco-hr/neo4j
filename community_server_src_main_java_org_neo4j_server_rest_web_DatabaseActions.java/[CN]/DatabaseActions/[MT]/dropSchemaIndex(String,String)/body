{
  Transaction tx=graphDb.beginTx();
  try {
    boolean found=false;
    for (    IndexDefinition index : graphDb.schema().getIndexes(label(labelName))) {
      if (propertyKey.equals(single(index.getPropertyKeys()))) {
        index.drop();
        found=true;
        break;
      }
    }
    tx.success();
    return found;
  }
  finally {
    tx.finish();
  }
}
