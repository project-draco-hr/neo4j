{
  if (remaining() >= numBytes) {
    return true;
  }
  if (buffer.remaining() > 0) {
    buffer.compact();
  }
 else {
    buffer.clear();
  }
  int count;
  do {
    count=channel.read(buffer);
  }
 while (count >= 0 && (buffer.position() < numBytes && buffer.remaining() != 0));
  buffer.flip();
  return buffer.remaining() >= numBytes;
}
