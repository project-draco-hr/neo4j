{
  TailoredWindowPoolFactory factory=new TailoredWindowPoolFactory(new BatchWritingWindowPoolFactory(config.fileChannelBufferSize(),writeMonitor));
  ReverseBatchUpdatingWindowPoolFactory reverseFactory=new ReverseBatchUpdatingWindowPoolFactory(config.fileChannelBufferSize(),writeMonitor);
  factory.override(StoreFactory.NODE_STORE_NAME,reverseFactory);
  factory.override(StoreFactory.RELATIONSHIP_STORE_NAME,reverseFactory);
  return newNeoStore(factory);
}
