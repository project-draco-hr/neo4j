{
  while (stillRunning) {
    try {
      ensureConnected();
      if (sendMessages()) {
        nettyChannel.flush();
      }
    }
 catch (    IOException e) {
      if (nettyChannel != null) {
        nettyChannel.close();
        nettyChannel=null;
      }
    }
    parkNanos(MILLISECONDS.toNanos(RETRY_DELAY_MS));
  }
  if (nettyChannel != null) {
    nettyChannel.close();
    messageQueue.clear();
  }
}
