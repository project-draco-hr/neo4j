{
  setOffset(cursor,recordNumber,counterNumber);
  long count=cursor.getLong();
  setOffset(cursor,recordNumber,counterNumber);
  cursor.putLong(count + 1);
  setOffset(cursor,recordNumber,countersPerRecord);
  long checksum=cursor.getLong();
  setOffset(cursor,recordNumber,countersPerRecord);
  cursor.putLong(checksum + 1);
}
