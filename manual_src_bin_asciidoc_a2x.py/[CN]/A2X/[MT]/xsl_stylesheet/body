def xsl_stylesheet(self, file_name=None):
    '\n        Return full path name of file in asciidoc docbook-xsl configuration\n        directory.\n        If an XSL file was specified with the --xsl-file option then it is\n        returned.\n        '
    if (self.xsl_file is not None):
        return self.xsl_file
    if (not file_name):
        file_name = (self.format + '.xsl')
    return self.asciidoc_conf_file(os.path.join('docbook-xsl', file_name))
