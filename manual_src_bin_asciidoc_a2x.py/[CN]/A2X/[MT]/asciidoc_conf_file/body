def asciidoc_conf_file(self, path):
    '\n        Return full path name of file in asciidoc configuration files directory.\n        Search first the directory containing the asciidoc executable then\n        the global configuration file directory.\n        '
    f = os.path.join(os.path.dirname(self.asciidoc), path)
    if (not os.path.isfile(f)):
        f = os.path.join(CONF_DIR, path)
        if (not os.path.isfile(f)):
            die(('missing configuration file: %s' % f))
    return os.path.normpath(f)
