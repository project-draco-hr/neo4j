def find_files(path, pattern):
    '\n    Return list of file names matching pattern in directory path.\n    '
    result = []
    for (p, dirs, files) in os.walk(path):
        for f in files:
            if fnmatch.fnmatch(f, pattern):
                result.append(os.path.normpath(os.path.join(p, f)))
    return result
