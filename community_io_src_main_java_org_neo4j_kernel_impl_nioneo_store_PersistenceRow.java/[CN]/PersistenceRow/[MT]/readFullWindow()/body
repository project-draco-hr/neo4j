{
  try {
    ByteBuffer byteBuffer=buffer.getBuffer();
    byteBuffer.clear();
    getFileChannel().read(byteBuffer,position * recordSize);
    byteBuffer.clear();
  }
 catch (  IOException e) {
    throw new PageLockException("Unable to load position[" + position + "] @["+ position * recordSize + "]",e);
  }
}
