{
  EphemeralFileSystemAbstraction fileSystem=new EphemeralFileSystemAbstraction();
  indexStorage=new PartitionedIndexStorage(directoryFactory,fileSystem,new File("/target/whatever"),INDEX_IDENTIFIER);
  LuceneSchemaIndex index=LuceneSchemaIndexBuilder.create().withIndexStorage(indexStorage).build();
  DeferredConstraintVerificationUniqueLuceneIndexPopulator populator=new DeferredConstraintVerificationUniqueLuceneIndexPopulator(index,descriptor);
  populator.create();
  return populator;
}
