{
  EphemeralFileSystemAbstraction fileSystem=new EphemeralFileSystemAbstraction();
  indexStorage=new PartitionedIndexStorage(directoryFactory,fileSystem,new File("/target/whatever"),INDEX_ID);
  DeferredConstraintVerificationUniqueLuceneIndexPopulator populator=new DeferredConstraintVerificationUniqueLuceneIndexPopulator(new LuceneIndex(indexStorage,new IndexConfiguration(false),new IndexSamplingConfig(new Config())),descriptor);
  populator.create();
  return populator;
}
