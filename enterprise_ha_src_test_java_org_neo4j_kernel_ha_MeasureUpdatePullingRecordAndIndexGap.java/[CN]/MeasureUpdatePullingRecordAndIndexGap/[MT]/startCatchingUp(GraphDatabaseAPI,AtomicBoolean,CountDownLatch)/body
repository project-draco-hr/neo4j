{
  new Thread(){
    @Override public void run(){
      try {
        while (!halter.get()) {
          try {
            db.getDependencyResolver().resolveDependency(UpdatePuller.class).pullUpdates();
          }
 catch (          InterruptedException e) {
            Thread.currentThread().interrupt();
            throw new RuntimeException(e);
          }
        }
      }
  finally {
        endLatch.countDown();
      }
    }
  }
.start();
}
