{
  GraphDatabaseAPI db=(GraphDatabaseAPI)new TestGraphDatabaseFactory().newImpermanentDatabaseBuilder().setConfig(GraphDatabaseSettings.cache_type,CacheType.gcr.name()).newGraphDatabase();
  Cache<?> firstCache=first(db.getNodeManager().caches());
  db.shutdown();
  db=(GraphDatabaseAPI)new TestGraphDatabaseFactory().newImpermanentDatabaseBuilder().setConfig(GraphDatabaseSettings.cache_type,CacheType.gcr.name()).newGraphDatabase();
  try {
    Cache<?> secondCache=first(db.getNodeManager().caches());
    assertEquals(firstCache,secondCache);
  }
  finally {
    db.shutdown();
  }
}
