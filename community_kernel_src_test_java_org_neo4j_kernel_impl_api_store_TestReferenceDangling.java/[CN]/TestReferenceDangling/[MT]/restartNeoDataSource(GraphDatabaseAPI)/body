{
  slave.getDependencyResolver().resolveDependency(XaDataSourceManager.class).getXaDataSource(NeoStoreXaDataSource.DEFAULT_DATA_SOURCE_NAME).stop();
  slave.getDependencyResolver().resolveDependency(XaDataSourceManager.class).getXaDataSource(NeoStoreXaDataSource.DEFAULT_DATA_SOURCE_NAME).start();
}
