{
  Exception error=null;
  for (int i=0; i < 3; i++) {
    try {
      instantiateQuorum();
      return;
    }
 catch (    Exception e) {
      System.out.println("ZK connection couldn't be verified, retrying...");
      error=e;
    }
  }
  throw new RuntimeException("Couldn't form a ZK quorum even after a couple of retries",error);
}
