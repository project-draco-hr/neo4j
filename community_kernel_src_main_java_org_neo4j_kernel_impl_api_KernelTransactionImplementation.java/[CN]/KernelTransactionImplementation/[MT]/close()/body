{
  assertTransactionOpen();
  assertTransactionNotClosing();
  closeCurrentStatementIfAny();
  closing=true;
  try {
    if (failure || !success) {
      rollback();
      if (success) {
        throw new TransactionFailureException(Status.Transaction.MarkedAsFailed,"Transaction rolled back even if marked as successful");
      }
    }
 else {
      commit();
    }
  }
  finally {
    closed=true;
    closing=false;
  }
}
