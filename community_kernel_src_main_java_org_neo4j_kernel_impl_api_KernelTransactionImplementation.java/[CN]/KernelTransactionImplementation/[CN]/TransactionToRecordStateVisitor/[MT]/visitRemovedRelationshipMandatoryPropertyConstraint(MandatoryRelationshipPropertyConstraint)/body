{
  try {
    clearState=true;
    SchemaRule rule=schemaStorage.mandatoryRelationshipPropertyConstraint(element.relationshipType(),element.propertyKey());
    recordState.dropSchemaRule(rule);
  }
 catch (  SchemaRuleNotFoundException e) {
    throw new IllegalStateException("Mandatory relationship property constraint to be removed should exist, since its existence " + "should have been validated earlier and the schema should have been locked.");
  }
}
