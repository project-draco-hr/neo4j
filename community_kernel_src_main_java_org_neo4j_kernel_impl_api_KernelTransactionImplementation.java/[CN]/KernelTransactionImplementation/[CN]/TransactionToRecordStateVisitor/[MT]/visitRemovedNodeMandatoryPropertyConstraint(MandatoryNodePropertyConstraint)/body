{
  try {
    clearState=true;
    recordState.dropSchemaRule(schemaStorage.mandatoryNodePropertyConstraint(element.label(),element.propertyKey()));
  }
 catch (  SchemaRuleNotFoundException e) {
    throw new IllegalStateException("Mandatory node property constraint to be removed should exist, since its existence should " + "have been validated earlier and the schema should have been locked.");
  }
}
