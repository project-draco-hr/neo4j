{
  return new PrimitiveLongIterator(){
    private PrimitiveLongIterator current;
    @Override public boolean hasNext(){
      while (current == null || !current.hasNext()) {
        if (!source.hasNext()) {
          return false;
        }
        current=source.next();
      }
      return true;
    }
    @Override public long next(){
      if (!hasNext()) {
        throw new NoSuchElementException();
      }
      return current.next();
    }
  }
;
}
