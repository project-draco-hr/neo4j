{
  File fileA=new File(stateDir,FILENAME + "a");
  File fileB=new File(stateDir,FILENAME + "b");
  TermStateRecoveryManager recoveryManager=new TermStateRecoveryManager(fileSystemAbstraction,new InMemoryTermStateChannelMarshal());
  final StateRecoveryManager.RecoveryStatus recoveryStatus=recoveryManager.recover(fileA,fileB);
  this.inMemoryTermState=recoveryManager.readLastEntryFrom(fileSystemAbstraction,recoveryStatus.previouslyActive());
  this.statePersister=new StatePersister<>(fileA,fileB,fileSystemAbstraction,numberOfEntriesBeforeRotation,new InMemoryTermStateChannelMarshal(),recoveryStatus.previouslyInactive(),databaseHealthSupplier);
}
