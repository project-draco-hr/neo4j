{
  for (  IndexServiceContext context : this.contexts.values()) {
    if (!context.instantiatedHere) {
      continue;
    }
    try {
      context.indexService.getClass().getMethod("shutdown").invoke(context.indexService);
    }
 catch (    Exception e) {
      System.out.println("Couldn't shut down index service " + context + ", "+ context.getClass());
    }
  }
  this.contexts.clear();
}
