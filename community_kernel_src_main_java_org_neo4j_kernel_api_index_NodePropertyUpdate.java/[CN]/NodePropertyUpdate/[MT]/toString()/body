{
  StringBuilder result=new StringBuilder(getClass().getSimpleName() + "[" + nodeId+ ", prop:"+ propertyKeyId+ " ");
switch (updateMode) {
case ADDED:
    result.append("add:" + valueAfter);
  break;
case CHANGED:
result.append("change:" + valueBefore + " => "+ valueAfter);
break;
case REMOVED:
result.append("remove:" + valueBefore);
break;
default :
throw new IllegalArgumentException(updateMode.toString());
}
result.append(", labelsBefore:" + Arrays.toString(labelsBefore));
result.append(", labelsAfter:" + Arrays.toString(labelsAfter));
return result.append("]").toString();
}
