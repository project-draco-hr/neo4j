{
  try {
    final long id=actions.newTransactionId();
    return Response.created(txUri(id)).header(HttpHeaders.CONTENT_ENCODING,"UTF-8").entity(new StreamingOutput(){
      @Override public void write(      OutputStream output) throws IOException, WebApplicationException {
        actions.executeInNewTransaction(new StatementDeserializer(input),id,new ExecutionResultSerializer(output));
      }
    }
).build();
  }
 catch (  Neo4jError neo4jError) {
    return Response.serverError().header(HttpHeaders.CONTENT_ENCODING,"UTF-8").build();
  }
}
