{
  final TransactionalActions.Transaction transaction;
  try {
    transaction=actions.newTransaction();
  }
 catch (  Neo4jError neo4jError) {
    return invalidTransaction(neo4jError);
  }
  return Response.created(uriScheme.txUri(transaction.getId())).header(HttpHeaders.CONTENT_ENCODING,"UTF-8").entity(new StreamingOutput(){
    @Override public void write(    OutputStream output) throws IOException, WebApplicationException {
      transaction.execute(new StatementDeserializer(input),new ExecutionResultSerializer(output,uriScheme));
    }
  }
).build();
}
