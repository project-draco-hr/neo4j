{
  return new Statement(){
    @Override public void evaluate() throws Throwable {
      directory=new File(new File(new File(new File("target"),"test-data"),description.getClassName()),description.getMethodName());
      delete(directory);
      directory.mkdirs();
      boolean success=false;
      try {
        base.evaluate();
        success=true;
      }
  finally {
        if (success) {
          delete(directory);
          delete(directory.getParentFile());
        }
      }
    }
  }
;
}
