{
  if (data.length > 4) {
    throw new AssertionError("Invalid usage; should have <= 4 data items, got: " + data.length);
  }
  byte[] result=new byte[16];
  for (int d=data.length, r=result.length - 4; d-- > 0; r-=4) {
    int value=data[d];
    for (int i=4; i-- > 0; ) {
      result[r + i]=(byte)(value & 0xFF);
      value>>>=8;
    }
  }
  return result;
}
