{
  Transaction tx=beginTx();
  try {
    for (    Node node : GlobalGraphOperations.at(this).getAllNodes()) {
      for (      Relationship rel : node.getRelationships(Direction.OUTGOING)) {
        rel.delete();
      }
      if (!node.hasRelationship()) {
        if (retainReferenceNode && node.getId() == 0) {
          continue;
        }
        node.delete();
      }
    }
    tx.success();
  }
 catch (  Exception e) {
    tx.failure();
  }
 finally {
    tx.finish();
  }
}
