{
  String mountPoint="/protected/wildcard_replacement/x/y/z/something/else/more_wildcard_replacement/a/b/c/final/bit";
  server=ServerBuilder.server().withDefaultDatabaseTuning().withThirdPartyJaxRsPackage("org.dummy.web.service",mountPoint).withSecurityRules(PermanentlyFailingSecurityRuleWithComplexWildcardPath.class.getCanonicalName()).build();
  server.start();
  gen.get().addSnippet("config","\n[source]\n----\norg.neo4j.server.rest.security_rules=my.rules.PermanentlyFailingSecurityRuleWithWildcardPath\n----\n");
  gen.get().addTestSourceSnippets(PermanentlyFailingSecurityRuleWithWildcardPath.class,"failingRuleWithWildcardPath");
  gen.get().setSection("ops");
  functionalTestHelper=new FunctionalTestHelper(server);
  JaxRsResponse clientResponse=gen.get().expectedStatus(401).expectedType(MediaType.TEXT_PLAIN_TYPE).expectedHeader("WWW-Authenticate").get(trimTrailingSlash(functionalTestHelper.baseUri()) + mountPoint + "/more/stuff").response();
  assertEquals(401,clientResponse.getStatus());
}
