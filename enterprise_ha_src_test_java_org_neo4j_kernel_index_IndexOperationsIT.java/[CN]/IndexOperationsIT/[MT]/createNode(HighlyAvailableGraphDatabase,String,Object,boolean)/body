{
  Transaction tx=author.beginTx();
  try {
    Node node=author.createNode();
    node.setProperty(key,value);
    if (index)     author.index().forNodes(key).add(node,key,value);
    tx.success();
    return node.getId();
  }
 catch (  Exception e) {
    e.printStackTrace(System.err);
    throw e;
  }
 finally {
    tx.finish();
  }
}
