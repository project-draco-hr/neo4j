{
  ArgReader reader=new ArgReader(AppCommandParser.tokenizeStringWithQuotes(line));
  HashMap<String,Object> hashMap=(HashMap<String,Object>)properties;
  while (reader.hasNext()) {
    String arg=reader.next();
    if (arg.startsWith("--")) {
      String[] scriptArgs=getScriptArgs(reader);
      String scriptName=arg.substring(2);
      Map<String,Object> props=new HashMap<String,Object>(hashMap);
      props.put("args",scriptArgs);
      this.runGroovyScript(groovyScriptEngine,scriptName,this.newGroovyBinding(props));
    }
  }
}
