{
  return new Statement(){
    @Override public void evaluate() throws Throwable {
      before();
      Throwable failure=null;
      try {
        base.evaluate();
      }
 catch (      Throwable e) {
        failure=e;
      }
 finally {
        try {
          after();
        }
 catch (        Throwable e) {
          if (failure != null) {
            failure.addSuppressed(e);
          }
 else {
            failure=e;
          }
        }
      }
      if (failure != null) {
        throw failure;
      }
    }
  }
;
}
