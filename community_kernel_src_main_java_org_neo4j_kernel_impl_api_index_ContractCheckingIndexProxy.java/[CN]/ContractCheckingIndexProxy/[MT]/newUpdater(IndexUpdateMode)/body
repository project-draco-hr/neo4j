{
  if (IndexUpdateMode.ONLINE == mode) {
    openCall("update");
    return new DelegatingIndexUpdater(super.newUpdater(mode)){
      @Override public void close() throws IOException, IndexEntryConflictException, IndexCapacityExceededException {
        try {
          delegate.close();
        }
  finally {
          closeCall();
        }
      }
    }
;
  }
 else {
    return super.newUpdater(mode);
  }
}
