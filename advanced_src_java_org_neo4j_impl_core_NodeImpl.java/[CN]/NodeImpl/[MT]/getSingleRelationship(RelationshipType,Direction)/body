{
  Iterator<Relationship> rels=new IntArrayIterator(getAllRelationshipsOfType(new RelationshipType[]{type}),this,dir,nodeManager);
  if (!rels.hasNext()) {
    return null;
  }
  Relationship rel=rels.next();
  if (rels.hasNext()) {
    throw new NotFoundException("More than one relationship[" + type + ", "+ dir+ "] found for "+ this);
  }
  return rel;
}
