{
  Transaction tx=graphDb.beginTx();
  try {
    ThreadToStatementContextBridge bridge=graphDb.getDependencyResolver().resolveDependency(ThreadToStatementContextBridge.class);
    DataStatement statement=bridge.dataStatement();
    labelId=statement.labelGetOrCreateForName("Person");
    propertyKeyId=statement.propertyKeyGetOrCreateForName("name");
    statement.close();
    tx.success();
  }
  finally {
    tx.finish();
  }
}
