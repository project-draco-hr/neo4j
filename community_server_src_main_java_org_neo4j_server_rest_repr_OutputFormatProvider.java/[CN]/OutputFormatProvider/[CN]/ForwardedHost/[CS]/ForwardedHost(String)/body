{
  if (headerValue == null) {
    this.isValid=false;
    return;
  }
  String firstAddress=headerValue.split(",")[0].trim();
  try {
    UriBuilder.fromUri(firstAddress).build();
  }
 catch (  IllegalArgumentException ex) {
    this.isValid=false;
    return;
  }
  String[] strings=firstAddress.split(":");
  if (strings.length > 0) {
    this.host=strings[0];
    isValid=true;
  }
  if (strings.length > 1) {
    this.port=Integer.valueOf(strings[1]);
    isValid=true;
  }
  if (strings.length > 2) {
    this.isValid=true;
  }
}
