{
  try {
    Map<String,Object> req=jsonToMap(json);
    if (req.containsKey(URL_KEY)) {
      GraphMLImporter.doImport(req.get(URL_KEY).toString());
    }
 else {
      throw new IllegalArgumentException("You have to specify a url.");
    }
    return addHeaders(Response.ok()).build();
  }
 catch (  Exception e) {
    return buildExceptionResponse(Status.BAD_REQUEST,"Request failed.",e,JsonRenderers.DEFAULT);
  }
}
