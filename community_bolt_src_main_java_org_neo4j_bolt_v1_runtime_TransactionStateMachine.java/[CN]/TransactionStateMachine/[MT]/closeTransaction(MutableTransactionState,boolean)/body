{
  KernelTransaction tx=ctx.currentTransaction;
  ctx.currentTransaction=null;
  if (tx != null) {
    try {
      if (success) {
        tx.success();
      }
 else {
        tx.failure();
      }
      if (tx.isOpen()) {
        tx.close();
      }
    }
  finally {
      ctx.currentTransaction=null;
    }
  }
}
