{
  if (!dir.isDirectory())   return 0;
  long total=0;
  for (  File file : dir.listFiles()) {
    long size;
    String filename=file.getName();
    if (file.isDirectory()) {
      logger.logMessage(prefix + filename + ":");
      size=logStoreFiles(logger,prefix + "  ",file);
      filename="- Total";
    }
 else {
      size=file.length();
    }
    logger.logMessage(prefix + filename + ": "+ bytes(size));
    total+=size;
  }
  return total;
}
