{
  when(config.get(SecuritySettings.ldap_authorization_group_to_role_mapping)).thenReturn("group=role1,role2,role3,,,");
  LdapRealm realm=new LdapRealm(config,logProvider);
  assertThat(realm.getGroupToRoleMapping().keySet(),equalTo(Stream.of("group").collect(Collectors.toSet())));
  assertThat(realm.getGroupToRoleMapping().get("group"),equalTo(Arrays.asList("role1","role2","role3")));
  assertThat(realm.getGroupToRoleMapping().size(),equalTo(1));
}
