{
  String indexName="bobTheIndex";
  String key="bobsKey";
  String value="bobsValue";
  long relationship=helper.createRelationship("TYPE");
  helper.addRelationshipToIndex(indexName,key,value,relationship);
  ClientResponse response=Client.create().resource(functionalTestHelper.indexRelationshipUri(indexName) + "?query=" + key+ ":"+ value).accept(MediaType.APPLICATION_JSON).get(ClientResponse.class);
  assertEquals(200,response.getStatus());
  response.close();
}
