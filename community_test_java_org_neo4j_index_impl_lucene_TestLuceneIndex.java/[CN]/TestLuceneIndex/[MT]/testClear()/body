{
  Index<Node> index=provider.nodeIndex("index",LuceneIndexProvider.EXACT_CONFIG);
  Node node=graphDb.createNode();
  index.add(node,"name","Mattias");
  index.clear();
  assertCollection(index.get("name","Mattias"));
  restartTx();
  assertCollection(index.get("name","Mattias"));
  index.add(node,"name","Mattias");
  restartTx();
  index.clear();
  assertCollection(index.get("name","Mattias"));
  restartTx();
  assertCollection(index.get("name","Mattias"));
}
