{
  if (status == Status.on) {
    if (allowedThrowables.accept(throwable)) {
      success();
    }
 else {
      countDown--;
      lastThrowable=throwable;
      pcs.firePropertyChange("serviceLevel",(countDown + 1) / ((double)threshold),countDown / ((double)threshold));
      if (countDown == 0) {
        trip();
      }
    }
  }
}
