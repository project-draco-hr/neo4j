{
  return new Validator<T[]>(){
    @Override public void validate(    T[] value){
      if (value.length < length) {
        throw new IllegalArgumentException("Expected '" + key + "' to have at least "+ length+ " item"+ (length == 1 ? "" : "s")+ ", but had "+ value.length+ " ("+ Arrays.toString(value)+ ")");
      }
    }
  }
;
}
