{
  if (version == null || version.equals("")) {
    return "<unknown>";
  }
 else   if (version.contains("SNAPSHOT")) {
    String revision=getRevision();
    if (revision.equals(""))     return version;
    return version + " (revision: " + defaultValue(getRevision(),"<unknown>")+ ")";
  }
 else {
    return version;
  }
}
