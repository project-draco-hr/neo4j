{
  try {
    FileWriter fstream=new FileWriter(propertyFile,true);
    BufferedWriter out=new BufferedWriter(fstream);
    out.write(name);
    out.write("=");
    out.write(value);
    out.write(System.getProperty("line.separator"));
    out.close();
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
}
