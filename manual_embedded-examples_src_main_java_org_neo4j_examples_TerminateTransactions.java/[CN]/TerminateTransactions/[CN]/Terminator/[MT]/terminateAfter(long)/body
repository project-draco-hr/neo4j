{
  Executors.newSingleThreadExecutor().submit(new Runnable(){
    @Override public void run(){
      long startTime=System.currentTimeMillis();
      do {
        try {
          Thread.sleep(millis);
        }
 catch (        InterruptedException ignored) {
        }
      }
 while ((System.currentTimeMillis() - startTime) < millis);
      tx.terminate();
    }
  }
);
}
