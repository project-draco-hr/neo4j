{
  final TransactionTimespanThreshold threshold=new TransactionTimespanThreshold(new FrozenClock(1000l),TimeUnit.MILLISECONDS,100);
  final IOException ex=new IOException();
  when(source.getFirstStartRecordTimestamp(version)).thenThrow(ex);
  threshold.init();
  try {
    threshold.reached(file,version,source);
    fail("should have thrown");
  }
 catch (  RuntimeException e) {
    assertEquals(ex,e.getCause());
  }
}
