{
  awaitStartSignal();
  while (failure.get() == null && !stopSignal.get()) {
    try (Transaction tx=db.beginTx()){
      count(parentNode.getRelationships(RELTYPE,OUTGOING));
      parentNode.createRelationshipTo(db.createNode(),RELTYPE);
      tx.success();
    }
 catch (    Exception e) {
      failure.compareAndSet(null,e);
    }
  }
}
