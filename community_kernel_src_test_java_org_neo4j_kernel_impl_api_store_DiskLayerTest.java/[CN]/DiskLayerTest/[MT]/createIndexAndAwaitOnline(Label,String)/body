{
  IndexDefinition index;
  try (Transaction tx=db.beginTx()){
    index=db.schema().indexFor(label).on(propertyKey).create();
    tx.success();
  }
   try (Transaction ignored=db.beginTx()){
    db.schema().awaitIndexOnline(index,10,SECONDS);
    return statement.indexesGetForLabelAndPropertyKey(statement.labelGetForName(label.name()),statement.propertyKeyGetForName(propertyKey));
  }
 }
