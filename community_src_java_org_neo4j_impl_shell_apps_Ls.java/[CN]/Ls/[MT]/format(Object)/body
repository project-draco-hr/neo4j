{
  String result=null;
  if (value.getClass().isArray()) {
    StringBuffer buffer=new StringBuffer();
    int length=Array.getLength(value);
    for (int i=0; i < length; i++) {
      Object singleValue=Array.get(value,i);
      if (i > 0) {
        buffer.append(",");
      }
      buffer.append("[" + singleValue + "]");
    }
    result=buffer.toString();
  }
 else {
    result="[" + value + "]";
  }
  return result;
}
