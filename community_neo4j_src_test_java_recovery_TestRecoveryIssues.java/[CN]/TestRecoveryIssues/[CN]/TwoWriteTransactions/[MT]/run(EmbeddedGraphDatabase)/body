{
  Transaction tx=graphdb.beginTx();
  Node node;
  try {
    node=graphdb.createNode();
    tx.success();
  }
  finally {
    tx.finish();
  }
  tx=graphdb.beginTx();
  try {
    node.setProperty("correct","yes");
    graphdb.index().forNodes("nodes").add(node,"name","value");
    tx.success();
  }
  finally {
    tx.finish();
  }
}
