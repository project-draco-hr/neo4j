@staticmethod
def parse_span_spec(span_spec):
    '\n        Parse AsciiDoc cell span specifier and return 2-tuple with horizonatal\n        and vertical span counts. Set default values (1,1) if not\n        specified.\n        '
    result = (None, None)
    if span_spec:
        mo = re.match('^(\\d+)?(\\.(\\d+))?$', span_spec)
        if mo:
            result = ((mo.group(1) and int(mo.group(1))), (mo.group(3) and int(mo.group(3))))
    return ((result[0] or 1), (result[1] or 1))
