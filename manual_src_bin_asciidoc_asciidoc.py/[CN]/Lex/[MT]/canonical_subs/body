@staticmethod
def canonical_subs(options):
    'Translate composite subs values.'
    if (len(options) == 1):
        if (options[0] == 'none'):
            options = ()
        elif (options[0] == 'normal'):
            options = config.subsnormal
        elif (options[0] == 'verbatim'):
            options = config.subsverbatim
    return options
