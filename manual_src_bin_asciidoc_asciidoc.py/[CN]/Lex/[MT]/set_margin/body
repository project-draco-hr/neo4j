@staticmethod
def set_margin(lines, margin=0):
    "Utility routine that sets the left margin to 'margin' space in a\n        block of non-blank lines."
    lines = list(lines)
    width = len(lines[0])
    for s in lines:
        i = re.search('\\S', s).start()
        if (i < width):
            width = i
    for i in range(len(lines)):
        lines[i] = ((' ' * margin) + lines[i][width:])
    return lines
