def load_filters(self, dirs=None):
    "\n        Load filter configuration files from 'filters' directory in dirs list.\n        If dirs not specified try all the well known locations.  Suppress\n        loading if a file named __noautoload__ is in same directory as the conf\n        file unless the filter has been specified with the --filter\n        command-line option (in which case it is loaded unconditionally).\n        "
    if (dirs is None):
        dirs = self.get_load_dirs()
    for d in dirs:
        filtersdir = os.path.join(d, 'filters')
        for (dirpath, dirnames, filenames) in os.walk(filtersdir):
            subdirs = dirpath[len(filtersdir):].split(os.path.sep)
            filter_opt = ((len(subdirs) > 1) and (subdirs[1] in self.filters))
            if (('__noautoload__' not in filenames) or filter_opt):
                for f in filenames:
                    if re.match('^.+\\.conf$', f):
                        self.load_file(f, dirpath)
