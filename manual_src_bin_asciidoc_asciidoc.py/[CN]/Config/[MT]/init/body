def init(self, cmd):
    '\n        Check Python version and locate the executable and configuration files\n        directory.\n        cmd is the asciidoc command or asciidoc.py path.\n        '
    if (float(sys.version[:3]) < MIN_PYTHON_VERSION):
        message.stderr('FAILED: Python 2.3 or better required')
        sys.exit(1)
    if (not os.path.exists(cmd)):
        message.stderr(('FAILED: Missing asciidoc command: %s' % cmd))
        sys.exit(1)
    global APP_FILE
    APP_FILE = os.path.realpath(cmd)
    global APP_DIR
    APP_DIR = os.path.dirname(APP_FILE)
    global USER_DIR
    USER_DIR = userdir()
    if (USER_DIR is not None):
        USER_DIR = os.path.join(USER_DIR, '.asciidoc')
        if (not os.path.isdir(USER_DIR)):
            USER_DIR = None
