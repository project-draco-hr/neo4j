def tag(self, name, d=None):
    "Returns (starttag,endtag) tuple named name from configuration file\n        [tags] section. Raise error if not found. If a dictionary 'd' is\n        passed then merge with document attributes and perform attribute\n        substitution on tags."
    if (not (name in self.tags)):
        raise EAsciiDoc, ('missing tag: %s' % name)
    (stag, etag) = self.tags[name]
    if (d is not None):
        if stag:
            stag = subs_attrs(stag, d)
        if etag:
            etag = subs_attrs(etag, d)
    if (stag is None):
        stag = ''
    if (etag is None):
        etag = ''
    return (stag, etag)
