def section_name(self, name=None):
    'Return macro markup template section name based on macro name and\n        prefix.  Return None section not found.'
    assert (self.prefix != '+')
    if (not name):
        assert self.name
        name = self.name
    if (self.prefix == '#'):
        suffix = '-blockmacro'
    else:
        suffix = '-inlinemacro'
    if ((name + suffix) in config.sections):
        return (name + suffix)
    else:
        message.warning(('missing macro section: [%s]' % (name + suffix)))
        return None
