{
  ByteBuffer buffer=ByteBuffer.allocateDirect(1000);
  while (true) {
    buffer.clear();
    try {
      int size=data.read(buffer);
      if (size == -1)       break;
      if ((totalSize+=size) >= crashAtSize)       client.shutdown();
    }
 catch (    IOException e) {
      throw new ComException(e);
    }
  }
}
