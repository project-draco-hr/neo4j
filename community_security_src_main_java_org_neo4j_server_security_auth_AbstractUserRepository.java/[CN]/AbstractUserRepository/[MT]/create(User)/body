{
  assertValidUsername(user.name());
synchronized (this) {
    for (    User other : users) {
      if (other.name().equals(user.name())) {
        throw new InvalidArgumentsException("The specified user '" + user.name() + "' already exists.");
      }
    }
    persistUsers();
    users.add(user);
    usersByName.put(user.name(),user);
  }
}
