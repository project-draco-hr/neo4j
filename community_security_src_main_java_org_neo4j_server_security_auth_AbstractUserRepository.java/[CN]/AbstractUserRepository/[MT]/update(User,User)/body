{
  if (!existingUser.name().equals(updatedUser.name())) {
    throw new IllegalArgumentException("Updated user '" + updatedUser.name() + "' has a different name than "+ "existing '"+ existingUser.name()+ "'.");
  }
synchronized (this) {
    List<User> newUsers=new ArrayList<>();
    boolean foundUser=false;
    for (    User other : users) {
      if (other.equals(existingUser)) {
        foundUser=true;
        newUsers.add(updatedUser);
      }
 else {
        newUsers.add(other);
      }
    }
    if (!foundUser) {
      throw new ConcurrentModificationException();
    }
    users=newUsers;
    saveUsers();
    usersByName.put(updatedUser.name(),updatedUser);
  }
}
